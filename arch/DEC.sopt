CC       = cc
CPP      = cpp
FC       = f95 -free
FC_fixed = f95 -fixed
LD       = f95
AR       = ar -r
CPPFLAGS = -C -D__DEC -D__FFTSG -D__FFTW -P
FCFLAGS  = -D__DEC -D__FFTSG -D__FFTW -O5 -ansi_alias -ansi_args\
           -automatic -fast -fp_reorder -std1 -tune host -u -w0
LDFLAGS  = $(FCFLAGS) -L$(HOME)/lib
LIBS     = -ldxml -lfftw-double

