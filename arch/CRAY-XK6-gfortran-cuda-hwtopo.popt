HWTOPO   = yes
NVCC     = nvcc
CC       = cc
CPP      =
FC       = ftn 
LD       = ftn 
AR       = ar -r
CPPFLAGS =
DFLAGS   = -D__GEMINI -D__parallel -D__SCALAPACK -D__FFTW3 -D__MAX_CONTR=3 -D__HAS_NO_GETLOG -D__ACC -D__DBCSR_ACC 
FCFLAGS  = -O2 -march=bdver1 -ffree-form -ftree-vectorize $(DFLAGS) -ffree-line-length-512
CFLAGS   = $(FCFLAGS) 
LDFLAGS  = $(FCFLAGS) -mkl=sequential
NVFLAGS  = $(DFLAGS) -g -O3 -arch sm_20
LIBS	= -lcudart -lrt \
	  -lpthread


