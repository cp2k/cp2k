CC       = cc
CPP      = 
FC       = ftn
LD       = ftn
AR       = ar -r
CPPFLAGS =
DFLAGS   = -D__FFTW3 -D__parallel -D__SCALAPACK -D__FORCE_USE_FAST_MATH
DFLAGS  += -hnoomp
CFLAGS   = $(DFLAGS)
FCFLAGS  = $(DFLAGS) -O2 -emf -ffree
FCFLAGS += -hflex_mp=strict
LDFLAGS  = $(FCFLAGS)
LIBS     = -lfftw3
