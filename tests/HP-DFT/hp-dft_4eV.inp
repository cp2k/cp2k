&GLOBAL
  PRINT_LEVEL medium
  PROJECT_NAME Pt_capacitor
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &HAIRY_PROBES
      ATOM_IDS 1..4
      EPS_HP 1.0E-5
      MU 2.00000
      T 300
    &END HAIRY_PROBES
    &HAIRY_PROBES
      ATOM_IDS 21..24
      EPS_HP 1.0E-5
      MU -2.00000
      T 300
    &END HAIRY_PROBES
    &KPOINTS
      SCHEME MONKHORST-PACK 8 8 1
    &END KPOINTS
    &MGRID
      CUTOFF 250
      NGRIDS 4
      REL_CUTOFF 50
    &END MGRID
    &POISSON
      POISSON_SOLVER IMPLICIT
      &IMPLICIT
        BOUNDARY_CONDITIONS NEUMANN
        NEUMANN_DIRECTIONS Z
        &DIELECTRIC
          DIELECTRIC_CONSTANT 1.0
        &END DIELECTRIC
      &END IMPLICIT
    &END POISSON
    &PRINT
      &DOS
      &END DOS
      &E_DENSITY_CUBE
        STRIDE 1
      &END E_DENSITY_CUBE
      &MULLIKEN
      &END MULLIKEN
      &TOT_DENSITY_CUBE
        STRIDE 1
      &END TOT_DENSITY_CUBE
      &V_HARTREE_CUBE
        STRIDE 1
      &END V_HARTREE_CUBE
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-14
    &END QS
    &SCF
      ADDED_MOS 1000
      CHOLESKY INVERSE
      EPS_DIIS 1.0E-01
      EPS_SCF 1.0E-07
      MAX_SCF 500
      SCF_GUESS ATOMIC
      #      &SMEAR ON
      #        METHOD FERMI_DIRAC
      #        ELECTRONIC_TEMPERATURE 300
      #      &END SMEAR
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.1
        BETA 0.5
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
      &OUTER_SCF
        EPS_SCF 1.0E-07
        MAX_SCF 40
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.614427842621188 4.862237139424608 29.2
      PERIODIC XY
    &END CELL
    &KIND Pt1
      BASIS_SET TZVP-MOLOPT-SR-GTH-q18
      ELEMENT Pt
      POTENTIAL GTH-PBE-q18
    &END KIND
    &KIND Pt2
      BASIS_SET TZVP-MOLOPT-SR-GTH-q18
      ELEMENT Pt
      POTENTIAL GTH-PBE-q18
    &END KIND
    &PRINT
      &ATOMIC_COORDINATES
        ADD_LAST NO
        FILENAME coord
      &END ATOMIC_COORDINATES
    &END PRINT
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME ./Pt111_2x2.xyz
      NUMBER_OF_ATOMS 24
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
