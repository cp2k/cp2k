@SET NREP 1
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &QS
      METHOD xTB
      &XTB
        GFN_TYPE 0
        VDW_POTENTIAL DFTD3
      &END XTB
    &END QS
    &SCF
      ADDED_MOS 100
      SCF_GUESS NONE
      &SMEAR
        ELECTRONIC_TEMPERATURE 1000
        METHOD FERMI_DIRAC
      &END SMEAR
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.431 5.431 5.431
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
      SCALED
      Si     0.000000    0.000000    0.000000
      Si     0.490000    0.500000    0.000000
      C      0.500000    0.000000    0.500000
      Si     0.000000    0.500000    0.500000
      Si     0.255000    0.250000    0.250000
      Si     0.250000    0.755000    0.750000
      Si     0.750000    0.250000    0.755000
      Si     0.750000    0.750000    0.255000
    &END COORD
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Si
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_FORCES T
  DEBUG_STRESS_TENSOR F
  DX 0.0001
  EPS_NO_ERROR_CHECK 0.000001
  STOP_ON_MISMATCH T
&END DEBUG
