&GLOBAL
  PRINT_LEVEL LOW
  PROJECT HF
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DEBUG_FORCES T
  DEBUG_STRESS_TENSOR F
  DX 0.0001
  STOP_ON_MISMATCH F
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PERIODIC_EFIELD
      DISPLACEMENT_FIELD
      D_FILTER 1.0 0.0 0.0
      INTENSITY 0.005
      POLARISATION 1 2 5
    &END PERIODIC_EFIELD
    &POISSON
      &EWALD
        ALPHA 1.0
        EWALD_TYPE SPME
        GMAX 75
      &END EWALD
    &END POISSON
    &PRINT
      &MOMENTS
        PERIODIC T
      &END MOMENTS
    &END PRINT
    &QS
      METHOD xTB
      &XTB
        DO_EWALD T
      &END XTB
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        MAX_SCF 50
      &END OUTER_SCF
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      A 6.0 0.0 0.0
      B 0.0 6.0 0.0
      C 0.0 0.0 6.0
    &END CELL
    &COORD
      H   0.000000    0.000000    0.000000
      F   0.940000    0.000000    0.000000
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
