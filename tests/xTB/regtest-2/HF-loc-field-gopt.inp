&GLOBAL
  PRINT_LEVEL LOW
  PROJECT HF
  RUN_TYPE GEO_OPT
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 2
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &EFIELD
      INTENSITY 0.01
      POLARISATION 1 2 5
    &END EFIELD
    &PRINT
      &MOMENTS
        PERIODIC F
      &END MOMENTS
    &END PRINT
    &QS
      METHOD xTB
    &END QS
    &SCF
      EPS_SCF 1.0E-8
      MAX_SCF 100
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        MAX_SCF 50
      &END OUTER_SCF
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      A 6.0 0.0 0.0
      B 0.0 6.0 0.0
      C 0.0 0.0 6.0
    &END CELL
    &COORD
      H   0.000000    0.000000    0.000000
      F   0.940000    0.000000    0.000000
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
