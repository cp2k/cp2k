@SET NREP 1
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &QS
      METHOD xTB
      &xTB
         STO_NG 6
         HYDROGEN_STO_NG 4
         DO_EWALD T
         COULOMB_INTERACTION T
         TB3_INTERACTION T
         &PARAMETER
             DISPERSION_PARAMETER_FILE dftd3.dat
         &END PARAMETER
      &END XTB
    &END QS
    &POISSON
      &EWALD
       ALPHA  10.0
       EWALD_TYPE SPME
       GMAX 75
      &END EWALD
    &END POISSON
    &KPOINTS
       #SCHEME  NONE
       SCHEME  GAMMA
       #SCHEME  MONKHORST-PACK  1 1 1
    &END KPOINTS
    &SCF
      SCF_GUESS MOPAC
      MAX_SCF  100
      EPS_SCF 1.e-7
      &MIXING
          METHOD DIRECT_P_MIXING
          ALPHA   0.40
      &END
    &END SCF
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 4.0 4.0 4.0
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
     H     0.000000    0.000000    0.000000
     F     0.980000    0.000000    0.000000
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT HF
  RUN_TYPE DEBUG
  #RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
&END GLOBAL
&DEBUG
   DEBUG_FORCES F
   DEBUG_STRESS_TENSOR T
   DX 0.002
   EPS_NO_ERROR_CHECK  0.000001
   STOP_ON_MISMATCH T
&END DEBUG
