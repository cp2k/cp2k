@SET NREP 1
&FORCE_EVAL
  &DFT
    &QS
      METHOD xTB
      &xTB
         DO_EWALD T
      &END XTB
    &END QS
    &POISSON
      &EWALD
       ALPHA 2.0
       EWALD_TYPE SPME
      &END EWALD
    &END POISSON
    &KPOINTS
       SCHEME  MONKHORST-PACK  2 2 2
    &END KPOINTS
    &SCF
      SCF_GUESS MOPAC
      MAX_SCF  100
      EPS_SCF 1.e-6
      &MIXING
          METHOD DIRECT_P_MIXING
          ALPHA   0.40
      &END
      &SMEAR
         METHOD FERMI_DIRAC
         ELECTRONIC_TEMPERATURE  1000
      &END
      ADDED_MOS 100
    &END SCF
    &PRINT
      &KS_CSR_WRITE
        BINARY .TRUE.
        UPPER_TRIANGULAR .TRUE.
        THRESHOLD 1.0E-4
      &END
      &S_CSR_WRITE
        BINARY .TRUE.
        UPPER_TRIANGULAR .TRUE.
        THRESHOLD 1.0E-4
      &END
    &END
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 5.431 5.431 5.431
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
     SCALED
     Si     0.000000    0.000000    0.000000
     Si     0.490000    0.500000    0.000000
     Si     0.500000    0.000000    0.500000
     Si     0.000000    0.500000    0.500000
     Si     0.255000    0.250000    0.250000
     Si     0.250000    0.755000    0.750000
     Si     0.750000    0.250000    0.755000
     Si     0.750000    0.750000    0.255000
    &END COORD
  &END SUBSYS
  STRESS_TENSOR ANALYTICAL
&END FORCE_EVAL
&GLOBAL
  PROJECT Si
  RUN_TYPE GEO_OPT     
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
 &GEO_OPT
  OPTIMIZER LBFGS
  MAX_ITER  2
  MAX_DR    0.0001
  RMS_DR    0.00003
  MAX_FORCE 0.00001
  RMS_FORCE 0.000003
 &END GEO_OPT
&END MOTION
