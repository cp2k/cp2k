&GLOBAL
  FFT_POOL_SCRATCH_LIMIT 4
  PRINT_LEVEL MEDIUM
  PROGRAM_NAME TEST
  PROJECT test_pw_03
  RUN_TYPE NONE
  &TIMINGS
    THRESHOLD 0.00000000001
  &END TIMINGS
&END GLOBAL

&TEST
  @SET SIZE1 16
  @SET SIZE2 16
  @SET SIZE3 16
  &PW_TRANSFER
    DEBUG
    GRID ${SIZE1} ${SIZE2} ${SIZE3}
    N_LOOP 2
    PW_GRID NS-FULLSPACE
    PW_GRID_BLOCKED FALSE
    PW_GRID_LAYOUT_ALL
  &END PW_TRANSFER
  &PW_TRANSFER
    DEBUG
    GRID ${SIZE1} ${SIZE2} ${SIZE3}
    N_LOOP 2
    PW_GRID NS-FULLSPACE
    PW_GRID_BLOCKED TRUE
    PW_GRID_LAYOUT_ALL
  &END PW_TRANSFER
&END TEST
