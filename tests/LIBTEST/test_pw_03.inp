&GLOBAL
  PRINT_LEVEL MEDIUM
  PROGRAM_NAME TEST
  RUN_TYPE NONE
  &TIMINGS
     THRESHOLD 0.00000000001
  &END
  FFT_POOL_SCRATCH_LIMIT 4
&END GLOBAL
&TEST
@SET SIZE1 16
@SET SIZE2 16
@SET SIZE3 16
  &PW_TRANSFER
     GRID ${SIZE1} ${SIZE2} ${SIZE3}
     N_LOOP 2
     PW_GRID_BLOCKED FALSE
     PW_GRID_LAYOUT_ALL
     DEBUG
     PW_GRID NS-FULLSPACE
  &END
  &PW_TRANSFER
     GRID ${SIZE1} ${SIZE2} ${SIZE3}
     N_LOOP 2
     PW_GRID_BLOCKED TRUE
     PW_GRID_LAYOUT_ALL
     DEBUG
     PW_GRID NS-FULLSPACE
  &END
&END
