
&FORCE_EVAL
  METHOD QMMM
  &DFT
    &QS
      METHOD AM1
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
    &END SCF
    &PRINT
      &AO_MATRICES
         DENSITY
      &END
    &END
  &END DFT
  &MM
    &FORCEFIELD
      parm_file_name ../../../Fist/sample_pot/water.pot
      parmtype CHM
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
