      ABC 6.0 6.0 6.0
      UNIT ANGSTROM
    &END CELL
    NOCENTER
    USE_GEEP_LIB 12
    ECOUPL COULOMB
    &QM_KIND H
      MM_INDEX 2 3
    &END QM_KIND
    &QM_KIND O
      MM_INDEX 1
    &END QM_KIND
    &PRINT
     &QMMM_MATRIX
     &END
    &END
  &END
