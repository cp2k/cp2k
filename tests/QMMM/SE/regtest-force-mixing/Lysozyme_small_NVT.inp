&GLOBAL
  PROJECT Lysozyme_small_NVT
# RUN_TYPE GEO_OPT should also work (no guarantees about convergence without a well defined total energy, though)
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
&END GLOBAL

&MOTION
   &PRINT
      &TRAJECTORY
	 FORMAT XYZ
	 &EACH
	    MD 1
	 &END EACH
	 COMMON_ITERATION_LEVELS 0
      &END TRAJECTORY
      &FORCES
	 FORMAT XYZ
	 &EACH
	    MD 1
	 &END EACH
	 COMMON_ITERATION_LEVELS 0
      &END FORCES
      &FORCE_MIXING_LABELS
         FORMAT XYZ
         &EACH
            MD 1
         &END EACH
         COMMON_ITERATION_LEVELS 0
      &END FORCE_MIXING_LABELS
   &END PRINT

  &MD
    ENSEMBLE NVT
    STEPS 2
    TIMESTEP 0.5
    TEMPERATURE 300.0
    &THERMOSTAT
       REGION MASSIVE
       TYPE AD_LANGEVIN
       &AD_LANGEVIN
         TIMECON_NH       74.0
         TIMECON_LANGEVIN 370.0
       &END AD_LANGEVIN
    &END
  &END MD

# not active in this regtest, just to show how it to make it work for force mixing
   &GEO_OPT
      OPTIMIZER CG
      &CG
	 &LINE_SEARCH
	    TYPE 2PNT
	    &2PNT
	       LINMIN_GRAD_ONLY
	    &END 2PNT
	 &END LINE_SEARCH
      &END CG
   &END GEO_OPT

&END MOTION
