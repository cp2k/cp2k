&FORCE_EVAL
  METHOD QMMM
  &DFT
    CHARGE 0
    BASIS_SET_FILE_NAME ../GTH_BASIS_SETS
    POTENTIAL_FILE_NAME ../FAKE_POTENTIAL
    &MGRID
      COMMENSURATE
      CUTOFF 25
    &END MGRID
    &QS
    &END QS
    &SCF
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &MM
    &FORCEFIELD
      &CHARGE
        ATOM NA
        CHARGE 1.0000
      &END CHARGE
      &CHARGE
        ATOM CL
        CHARGE -1.0000
      &END CHARGE
      &NONBONDED
        &LENNARD-JONES
          atoms NA NA
          EPSILON 0.0
          SIGMA 0.0
          RCUT 5.0
        &END LENNARD-JONES
        &LENNARD-JONES
          atoms CL NA
          EPSILON 0.0
          SIGMA 0.0
          RCUT 5.0
        &END LENNARD-JONES
        &LENNARD-JONES
          atoms CL CL
          EPSILON 0.0
          SIGMA 0.0
          RCUT 5.0
        &END LENNARD-JONES
      &END NONBONDED
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE ewald
        ALPHA .44
        GMAX 111
      &END EWALD
    &END POISSON
  &END MM
  &QMMM
    MM_POTENTIAL_FILE_NAME ../MM_POTENTIAL
    &CELL
      ABC 17.320500 17.320500 17.320500
    &END CELL
    ECOUPL GAUSS
    NOCOMPATIBILITY
    USE_GEEP_LIB 6
    &INTERPOLATOR
      EPS_R 1.0e-14
      EPS_X 1.0e-14
      MAXITER 100
    &END INTERPOLATOR
    &MM_KIND NA
      RADIUS 1.5875316249000
    &END MM_KIND
    &MM_KIND CL
      RADIUS 1.5875316249000
    &END MM_KIND
    &PERIODIC
      GMAX 0.3
      NGRIDS 17 29 23
      &MULTIPOLE
        EWALD_PRECISION 0.001
        RCUT 30.0
      &END MULTIPOLE
    &END PERIODIC
    &PRINT
      &PERIODIC_INFO
      &END PERIODIC_INFO
      &POTENTIAL
      &END POTENTIAL
    &END PRINT
    &QM_KIND NA
      MM_INDEX 3
    &END QM_KIND
    &QM_KIND CL
      MM_INDEX 2
    &END QM_KIND
  #
  # QM_KINDS
  #
  #
  #
  &END QMMM
  &SUBSYS
    &CELL
      ABC 100.0 150.0 125.0
    &END CELL
    &COORD
   NA        -8.660250   -8.660250   -8.660250
   CL         0.000000    0.000000    0.000000
   NA        -8.660250    0.000000    0.000000
   CL         0.000000    8.660250    8.660250
   NA         0.000000   -8.660250    0.000000
   CL         8.660250    0.000000    8.660250
   NA         0.000000    0.000000   -8.660250
   CL         8.660250    8.660250    0.000000
    &END COORD
    &KIND NA
      BASIS_SET SZV-GTH
      POTENTIAL GTH-P-NOEL
    &END KIND
    &KIND CL
      BASIS_SET SZV-GTH
      POTENTIAL GTH-M-NOEL
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT crys_per_qmmm_spln
  PRINT_LEVEL MEDIUM
  RUN_TYPE MD
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 2
    TIMESTEP 0.5
    TEMPERATURE 298
  &END MD
&END MOTION
