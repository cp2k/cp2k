&GLOBAL
  PROJECT Solv_alch_chng
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NPT_I
    STEPS 10
    TIMESTEP 0.5
    TEMPERATURE 200.0
    &BAROSTAT
    &END
    &THERMOSTAT
      &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 300
        MTS 2
      &END NOSE
    &END
    &PRINT
     &ENERGY
      &EACH
       MD 1
      &END
     &END
    &END
  &END MD
  &PRINT
   &TRAJECTORY
    &EACH
     MD 100
    &END
   &END
   &VELOCITIES OFF
   &END
   &FORCES OFF
   &END
   &RESTART_HISTORY OFF
   &END
   &RESTART
    &EACH
     MD 10
    &END
   &END
  &END
  &FREE_ENERGY
    METHOD AC
    &ALCHEMICAL_CHANGE
      PARAMETER k
    &END
  &END
&END MOTION
