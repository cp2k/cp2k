&GLOBAL
  PROJECT hcl_ot
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 100
    TEMPERATURE 300
    TEMP_TOL 100
    TIMESTEP 0.5
  &END MD
  &PRINT
    &TRAJECTORY OFF
    &END TRAJECTORY
    &VELOCITIES OFF
    &END VELOCITIES
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PRINT
      &AO_MATRICES
        CORE_HAMILTONIAN
        DENSITY
        KOHN_SHAM_MATRIX
        OVERLAP
      &END AO_MATRICES
      &MO
        EIGENVALUES
        EIGENVECTORS
      &END MO
    &END PRINT
    &QS
      METHOD MNDOD
      &SE
        STO_NG 6
      &END SE
    &END QS
    &SCF
      EPS_SCF 1.E-7
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 20
      SCF_GUESS MOPAC
      &OT
        PRECONDITIONER NONE
      &END OT
    &END SCF
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 30.0 30.0 30.0
    &END CELL
    &COORD
      H                    .00000000     .00000000     .00000000
      Cl                   .00000000    1.40000000     .00000000
    &END COORD
    &PRINT
      &KINDS
        BASIS_SET
        SE_PARAMETERS
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
