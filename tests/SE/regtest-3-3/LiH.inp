&GLOBAL
  PROJECT LiH
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL low
  WALLTIME 600
&END GLOBAL
&MOTION
  &GEO_OPT
    OPTIMIZER BFGS
    MAX_ITER  2
    MAX_DR    0.001
    RMS_DR    0.0005
    MAX_FORCE 0.00015
    RMS_FORCE 0.0001
  &END GEO_OPT
  &PRINT
    &STRESS
    &END STRESS
    &STRUCTURE_DATA
      DISTANCE 1 5
    &END STRUCTURE_DATA
  &END PRINT
&END MOTION
&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR analytical
#  STRESS_TENSOR numerical 
  &DFT
    &QS
      METHOD PM6
      &SE
        PERIODIC EWALD
        INTEGRAL_SCREENING KDSO-D
        &COULOMB
           CUTOFF   12.0
        &END
      &END
    &END QS
    &SCF
      SCF_GUESS MOPAC
      MAX_SCF 5
      EPS_SCF 1.0E-5
      &OT
        PRECONDITIONER NONE
        MINIMIZER CG
        LINESEARCH 3PNT
      &END
    &END SCF
    &POISSON
      &EWALD
        EWALD_TYPE EWALD
        ALPHA  0.5
        GMAX 41 41 41
        &MULTIPOLES
           MAX_MULTIPOLE_EXPANSION QUADRUPOLE
        &END
      &END EWALD
    &END POISSON
  &END DFT
  &PRINT
    &STRESS_TENSOR
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC 4.796302 4.796302 4.796302
    &END CELL
    &COORD
 SCALED
Li  0.000 0.000 0.000
Li  0.500 0.500 0.000
Li  0.500 0.000 0.500
Li  0.000 0.500 0.500
H   0.000 0.500 0.000
H   0.000 0.000 0.500
H   0.500 0.000 0.000
H   0.500 0.500 0.500
    &END COORD
    &PRINT
      &CELL
      &END CELL
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
