&GLOBAL
  PRINT_LEVEL LOW
  PROJECT GLYGLY
  RUN_TYPE BAND
&END GLOBAL

&MOTION
  &BAND
    BAND_TYPE IT-NEB
    K_SPRING 0.05
    NPROC_REP 1
    NUMBER_OF_REPLICA 5
    POT_TYPE ME
    ROTATE_FRAMES T
    USE_COLVARS
    &CONVERGENCE_CONTROL
      #MAX_DR 0.01
      MAX_FORCE 0.001
      #RMS_DR 0.02
      RMS_FORCE 0.0005
    &END CONVERGENCE_CONTROL
    &CONVERGENCE_INFO
    &END CONVERGENCE_INFO
    &OPTIMIZE_BAND
      OPT_TYPE MD
      &MD
        MAX_STEPS 5
        TEMPERATURE 100.0
        TIMESTEP 0.5
        &VEL_CONTROL
          ANNEALING 0.95
          PROJ_VELOCITY_VERLET T
        &END VEL_CONTROL
        #&TEMP_CONTROL
        #  TEMPeRATURE 100.0
        #  TEMP_TOL 50.
        #  TEMP_TOL_STEPS 100
        #&END
      &END MD
    &END OPTIMIZE_BAND
    &PROGRAM_RUN_INFO
      INITIAL_CONFIGURATION_INFO T
    &END PROGRAM_RUN_INFO
    &REPLICA
      COORD_FILE_NAME ../amber/MOL.0.xyz
    &END REPLICA
    &REPLICA
      COORD_FILE_NAME ../amber/MOL.1.xyz
    &END REPLICA
    &REPLICA
      COORD_FILE_NAME ../amber/MOL.2.xyz
    &END REPLICA
    &REPLICA
      COORD_FILE_NAME ../amber/MOL.3.xyz
    &END REPLICA
    &REPLICA_INFO
    &END REPLICA_INFO
  &END BAND
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      MOLECULE 1
      TARGET [deg] 0.0
      &RESTRAINT
        K 0.5
      &END RESTRAINT
    &END COLLECTIVE
  &END CONSTRAINT
  &GEO_OPT
    MAX_ITER 100
    OPTIMIZER BFGS
  &END GEO_OPT
  &PRINT
    &RESTART
      BACKUP_COPIES 0
    &END RESTART
    &TRAJECTORY OFF
    &END TRAJECTORY
    &VELOCITIES OFF
    &END VELOCITIES
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      PARMTYPE CHM
      PARM_FILE_NAME ../amber/mol.pot
      &SPLINE
        EMAX_ACCURACY 500.0
        EMAX_SPLINE 1.0E10
        EPS_SPLINE 1.0E-5
        R0_NB 0.0001
        RCUT_NB 20.0
      &END SPLINE
    &END FORCEFIELD
    &POISSON
      &EWALD
        ALPHA .36
        EWALD_TYPE ewald
        GMAX 29
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 30.0 30.0 30.0
    &END CELL
    &COLVAR
      &TORSION
        ATOMS 9 8 10 11
      &END TORSION
    &END COLVAR
    &TOPOLOGY
      CHARGE_BETA
      CONNECTIVITY UPSF
      CONN_FILE_NAME ../amber/mol.psf
      COORDINATE PDB
      COORD_FILE_NAME ../amber/mol.pdb
      PARA_RES F
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
