#CPQA INCLUDE ../../../data/scc/scc_parameter
#CPQA INCLUDE ../uff_table
#CPQA INCLUDE ../../../data/scc/hh.spl
&FORCE_EVAL
  &DFT
    CHARGE +1
    &QS
      METHOD DFTB
      &DFTB
        SELF_CONSISTENT    T
        DISPERSION         F
        DO_EWALD           T
        &PARAMETER
          PARAM_FILE_PATH  ../../../data/scc
          PARAM_FILE_NAME  scc_parameter
          UFF_FORCE_FIELD  ../uff_table
        &END PARAMETER
      &END DFTB
    &END QS
    &SCF
      SCF_GUESS CORE
      MAX_SCF  20
    &END SCF
    &POISSON
      &EWALD
       EWALD_TYPE SPME
       GMAX 100
      &END EWALD
      POISSON_SOLVER ANALYTIC
      PERIODIC NONE
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      PERIODIC NONE
    &END CELL
    &COORD
     H     10. 10. 10.
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H+
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
