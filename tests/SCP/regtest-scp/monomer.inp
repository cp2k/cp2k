&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &MGRID
      CUTOFF 100
    &END MGRID
    &SCP T
    &END SCP 
    &QS
      WF_INTERPOLATION PS 
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      &OUTER_SCF
        EPS_SCF 1.E-3
        MAX_SCF 50
      &END OUTER_SCF
      SCF_GUESS ATOMIC
      MAX_SCF 50
      EPS_SCF 1.000E-3
      &OT T
        SCP T
        MINIMIZER DIIS
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
    POTENTIAL_FILE_NAME ../../QS/GTH_POTENTIALS
    BASIS_SET_FILE_NAME ../test_basis_water
    &POISSON
      &MT
        REL_CUTOFF 1.5
      &END MT
      POISSON_SOLVER MT
      PERIODIC NONE
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      UNIT ANGSTROM
      PERIODIC NONE
    &END CELL
    &COORD
  O         0.00       0.00       0.00
  H        -0.78      -0.62       0.00 
  H         0.78      -0.62       0.00
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH
      AUX_BASIS_SET aux-scp
      POTENTIAL GTH-BLYP-q1
      ALPHA_SCP 1.0
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      AUX_BASIS_SET aux-scp
      POTENTIAL GTH-BLYP-q6
      ALPHA_SCP 1.0
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT MONOMER
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
