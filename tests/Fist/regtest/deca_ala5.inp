      CHARGE_BETA
      COORD_FILE_NAME ../sample_pdb/deca_ala.pdb
      COORDINATE PDB
      PARA_RES
    &END TOPOLOGY
    &PRINT
      &CELL
      &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PRINT_LEVEL LOW
  PROJECT deca_ala_ext_cell
  RUN_TYPE md
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 11
    TIMESTEP 0.5
    TEMPERATURE 450.0
  &END MD
  &PRINT
  &END
&END MOTION
