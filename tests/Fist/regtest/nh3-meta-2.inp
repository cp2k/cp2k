
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parmfile ../sample_pot/nh3.pot
      parmtype CHM
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 30
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
      UNIT ANGSTROM
    &END CELL
    &TOPOLOGY
      CONN_FILE ../sample_psf/nh3.psf
      CONNECTIVITY UPSF
      COORD_FILE nh3.pdb
      COORDINATE pdb
    &END TOPOLOGY
    &COLVAR
       &ANGLE
          ATOMS 2 1 3
       &END ANGLE
    &END COLVAR
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  FFTLIB FFTSG

  PROJECT NH3
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 50
    TIMESTEP 1.0
    TEMPERATURE 100.0
    TEMP_TOL 10.0
  &END MD
  &FREE_ENERGY
    &METADYN
      DO_HILLS
      LAGRANGE
      NT_HILLS 3
      WW 1.0e-2
      &METAVAR
        LAMBDA 0.1
        MASS 10.0
        SCALE 0.02
        COLVAR 1
        SUBSYS 1
      &END METAVAR
    &END METADYN
  &END
&END MOTION

