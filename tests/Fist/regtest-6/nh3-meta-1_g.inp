
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name ../sample_pot/nh3.pot
      parmtype CHM
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 30
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &TOPOLOGY
      CONN_FILE_NAME ../sample_psf/nh3.psf
      CONNECTIVITY UPSF
      COORD_FILE_NAME ../sample_pdb/nh3_1mol.pdb
      COORDINATE pdb
    &END TOPOLOGY
    &COLVAR
       &DISTANCE_POINT_PLANE
        &POINT
          TYPE GEO_CENTER
          ATOMS 3
        &END
        &POINT
          TYPE GEO_CENTER
          ATOMS 2
        &END
        &POINT
          TYPE GEO_CENTER
          ATOMS 1
        &END
        &POINT
          TYPE GEO_CENTER
          ATOMS 4
        &END
          ATOMS_PLANE 2 1 4
          ATOM_POINT 3
       &END DISTANCE_POINT_PLANE
    &END COLVAR
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL

  PROJECT NH3
  RUN_TYPE md
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 50
    TIMESTEP 1.0
    TEMPERATURE 300.0
    TEMP_TOL 10.0
  &END MD
  &FREE_ENERGY
    &METADYN
      DO_HILLS
      LAGRANGE
      NT_HILLS 3
      WW 1.0e-2
      &METAVAR
        LAMBDA 0.1
        MASS 10.0
        SCALE 0.02
        COLVAR 1
      &END METAVAR
    &END METADYN
  &END
&END MOTION

