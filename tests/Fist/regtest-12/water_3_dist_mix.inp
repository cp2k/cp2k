
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name ../sample_pot/water.pot
      parmtype CHM
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE pme
        ALPHA .44
        NS_MAX 25
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
      UNIT ANGSTROM
    &END CELL
    &COLVAR
      &DISTANCE
        ATOMS 1 4
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &DISTANCE
        ATOMS 2 5
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &ANGLE
        ATOMS 2 1 3
      &END ANGLE
    &END COLVAR
    &TOPOLOGY
      COORD_FILE_NAME ../sample_pdb/water_2.pdb
      COORDINATE pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT water_3
  RUN_TYPE MD
&END GLOBAL
&MOTION
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      INTERMOLECULAR
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 2
      INTERMOLECULAR
    &END COLLECTIVE
    &COLLECTIVE
      COLVAR 3
      MOLECULE 1
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVE
    STEPS 10
    TIMESTEP 2.5
    TEMPERATURE 298
  &END MD
&END MOTION
