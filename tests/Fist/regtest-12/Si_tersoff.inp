&GLOBAL
  PROJECT Si_tersoff
  RUN_TYPE cell_opt
&END GLOBAL

&MOTION
  &CELL_OPT
    EXTERNAL_PRESSURE [kbar] 100.0
    MAX_DR 0.02
    MAX_FORCE 0.002
    MAX_ITER 20
    OPTIMIZER CG
    RMS_DR 0.01
    RMS_FORCE 0.001
    TYPE GEO_OPT
    &CG
      &LINE_SEARCH
        TYPE 2PNT
        &2PNT
        &END 2PNT
      &END LINE_SEARCH
    &END CG
  &END CELL_OPT
  &GEO_OPT
    MAX_ITER 300
    MINIMIZER BFGS
  &END GEO_OPT
  &MD
    ENSEMBLE NVT
    STEPS 2000
    TEMPERATURE 300.0
    TIMESTEP 1.0
    &BAROSTAT
      PRESSURE 1.0
    &END BAROSTAT
    &PRINT
      &ENERGY
        &EACH
          MD 10
        &END EACH
      &END ENERGY
      &PROGRAM_RUN_INFO
        &EACH
          MD 10
        &END EACH
      &END PROGRAM_RUN_INFO
    &END PRINT
    &THERMOSTAT
      TYPE CSVR
      &CSVR
        TIMECON 50.
      &END CSVR
    &END THERMOSTAT
  &END MD
  &PRINT
    &CELL
      &EACH
        MD 10
      &END EACH
    &END CELL
    &RESTART
      BACKUP_COPIES 0
      &EACH
        MD 10
      &END EACH
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
    &STRESS off
      FILENAME STRESS
    &END STRESS
    &TRAJECTORY
      &EACH
        MD 10
      &END EACH
    &END TRAJECTORY
    &VELOCITIES OFF
    &END VELOCITIES
  &END PRINT
&END MOTION

