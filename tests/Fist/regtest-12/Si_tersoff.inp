&GLOBAL
  PROJECT silicon
  RUN_TYPE cell_opt
&END GLOBAL
&MOTION
  &CELL_OPT
    TYPE GEO_OPT
    OPTIMIZER CG
    MAX_ITER 20
    EXTERNAL_PRESSURE [kbar] 100.0
    MAX_DR 0.02
    RMS_DR 0.01
    MAX_FORCE 0.002
