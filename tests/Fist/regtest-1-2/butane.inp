&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name ../sample_pot/butane.pot
      parmtype CHM
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 24
        O_SPLINE 6
      &END EWALD
    &END POISSON
    &PRINT
      &NEIGHBOR_LISTS
      &END
    &END
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORD_FILE_NAME ../sample_pdb/butane.pdb
      COORDINATE pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT butane
  RUN_TYPE md
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 100
    TIMESTEP 2.5
    TEMPERATURE 300
  &END MD
&END MOTION
