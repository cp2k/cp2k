
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      VDW_SCALE14 0.0
      EI_SCALE14  0.0
      parm_file_name ../sample_pot/h2o2_amber.pot
      parmtype CHM
      scale_cutoff .false.
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE ewald
        ALPHA .36
        GMAX 51
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
    &END CELL
    &TOPOLOGY
      CONN_FILE_NAME ../sample_psf/h2o2_amber.psf
      CONNECTIVITY UPSF
      COORD_FILE_NAME ../sample_pdb/h2o2_amber.pdb
      COORDINATE PDB
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PRINT_LEVEL LOW
  PROJECT mol
  RUN_TYPE ENERGY_FORCE
&END GLOBAL
