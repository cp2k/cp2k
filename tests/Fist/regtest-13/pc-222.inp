&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      VDW_SCALE14 0.5
      EI_SCALE14  0.8333333
      SHIFT_CUTOFF .FALSE.
      PARM_FILE_NAME ../sample_top/pc.top
      PARMTYPE AMBER
      &SPLINE
        EMAX_SPLINE 1.0
      &END
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE SPME
        ALPHA .36
        GMAX 64
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC [angstrom] 18.12 18.12 18.12
      MULTIPLE_UNIT_CELL 2 2 2
    &END CELL
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 2 2 2
      COORDINATE XYZ
      COORD_FILE_NAME ../sample_xyz/pc.xyz
      CONNECTIVITY AMBER
      CONN_FILE_NAME ../sample_top/pc.top
    &END
  &END SUBSYS
  STRESS_TENSOR ANALYTICAL
&END FORCE_EVAL
&GLOBAL
  PROJECT pc-222
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NPT_I
    STEPS 10
    TIMESTEP 0.5
    TEMPERATURE 300.0
    &BAROSTAT
      PRESSURE 10000.
      TIMECON 200.
    &END BAROSTAT
    &THERMOSTAT
      REGION MOLECULE
      &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 200.
        MTS 2
      &END NOSE
    &END
  &END MD
  &PRINT
    &RESTART
       &EACH
         MD 100
       &END
    &END
    &TRAJECTORY
       &EACH
         MD 10
       &END
    &END
    &CELL
       &EACH
         MD 10
       &END
    &END
  &END
&END MOTION
