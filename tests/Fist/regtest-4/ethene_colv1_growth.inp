
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name ../sample_pot/charmm.pot
      parmtype CHM
      &CHARGE
        ATOM CE2
        CHARGE -0.42
      &END CHARGE
      &CHARGE
        ATOM HE2
        CHARGE 0.21
      &END CHARGE
      &BEND
        ATOMS HE2 CE2 HE2
        K 0.0
        THETA0 [deg] 120.0
      &END
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 24
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
      UNIT ANGSTROM
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME ../sample_pdb/ethene.pdb
      COORDINATE pdb
    &END TOPOLOGY
    &COLVAR
      &ANGLE
        ATOMS 6 2 4
      &END
    &END
    &COLVAR
      &ANGLE
        ATOMS 5 1 3
      &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL

  PROJECT ethene
  RUN_TYPE md
&END GLOBAL
&MOTION
  &CONSTRAINT
    SHAKE_TOLERANCE 1.0E-4
    &COLLECTIVE
      TARGET 2.093
      TARGET_GROWTH [rad*fs^-1] 0.01
      MOLECULE 1
      COLVAR 1
    &END COLLECTIVE
    &COLLECTIVE
      TARGET 2.093
      TARGET_GROWTH [rad*fs^-1] -0.01
      MOLECULE 1
      COLVAR 2
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVE
    STEPS 50
    TIMESTEP 0.5
    TEMPERATURE 500
  &END MD
&END MOTION
