 &GLOBAL
   PRINT_LEVEL  MEDIUM
   PROJECT_NAME quartz
   RUN_TYPE  CELL_OPT
 &END GLOBAL
 &MOTION
   &CELL_OPT
     OPTIMIZER  BFGS
     MAX_ITER  1
     KEEP_ANGLES  T
     KEEP_SYMMETRY  T
     KEEP_SPACE_GROUP T
     EPS_GEO 1e-4
     EPS_SPGR 1e-4
   &END CELL_OPT
 &END MOTION
 &FORCE_EVAL
   METHOD  QS
   STRESS_TENSOR  ANALYTICAL
   &DFT
     BASIS_SET_FILE_NAME BASIS_MOLOPT
     POTENTIAL_FILE_NAME GTH_POTENTIALS
     MULTIPLICITY  1
     CHARGE  0
     &SCF
       MAX_SCF  1
       SCF_GUESS  ATOMIC
       &OT  T
         MINIMIZER  CG
         PRECONDITIONER  FULL_ALL
       &END OT
       &OUTER_SCF  T
         MAX_SCF  1
       &END OUTER_SCF
     &END SCF
     &QS
       METHOD  GPW
     &END QS
     &MGRID
       NGRIDS  5
       CUTOFF    250.0
       REL_CUTOFF  25.0
     &END MGRID
     &XC
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE  T
         &END PBE
       &END XC_FUNCTIONAL
     &END XC
     &POISSON
       POISSON_SOLVER  PERIODIC
       PERIODIC  XYZ
     &END POISSON
   &END DFT
   &SUBSYS
     &CELL
       ABC 4.9159998894 4.9159998894 5.4053997993
       ALPHA_BETA_GAMMA 90.00 90.00 120.00
       PERIODIC  XYZ
       MULTIPLE_UNIT_CELL  1 1 1
       SYMMETRY  MONOCLINIC_GAMMA_AB
     &END CELL
     &COORD
       Si   0.469699985         0.000000000         0.000000000 
       Si   0.000000018         0.469700021         0.666666696 
       Si   0.530300031         0.530300048         0.333333348 
       O    0.413500032         0.266900007         0.119099996 
       O    0.266900018         0.413500038         0.547566700 
       O    0.733100016         0.146600017         0.785766692 
       O    0.586499976         0.853400010         0.214233330 
       O    0.853400027         0.586500031         0.452433344 
       O    0.146600008         0.733100006         0.880900004 
       UNIT angstrom
       SCALED  T
     &END COORD
     &KIND Si
       BASIS_SET DZVP-MOLOPT-SR-GTH-q4
       POTENTIAL GTH-PBE-q4
     &END KIND
     &KIND O
       BASIS_SET DZVP-MOLOPT-SR-GTH-q6
       POTENTIAL GTH-PBE-q6
     &END KIND
     &TOPOLOGY
       NUMBER_OF_ATOMS  9
       MULTIPLE_UNIT_CELL  1 1 1
     &END TOPOLOGY
   &END SUBSYS
 &END FORCE_EVAL
