&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      VDW_SCALE14 0.5
      EI_SCALE14  0.8333333
      SHIFT_CUTOFF .FALSE.
      PARM_FILE_NAME ../sample_top/lamol.top
      PARMTYPE AMBER
      &SPLINE
        EMAX_SPLINE 1.0
      &END
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE SPME
        ALPHA .36
        GMAX 64
      &END EWALD
    &END POISSON
    &PRINT
      &FF_INFO OFF
      &END
    &END
  &END MM
  &SUBSYS
    &CELL
      ABC [angstrom] 70. 70. 70.
    &END CELL
    &TOPOLOGY
      COORDINATE XYZ
      COORD_FILE_NAME ../sample_xyz/4mol.xyz
      CONNECTIVITY MOL_SET
      &MOL_SET
        &MOLECULE
          NMOL 4
          CONNECTIVITY AMBER
          CONN_FILE_NAME ../sample_top/lamol.top
        &END
      &END
      &DUMP_PSF
      &END
      &DUMP_PDB
      &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT lamol
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 20
    TIMESTEP 0.5
    TEMPERATURE 300.0
    &THERMOSTAT
      REGION MOLECULE
      &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 200.
        MTS 2
      &END NOSE
    &END
  &END MD
  &PRINT
    &RESTART
       &EACH
         MD 100
       &END
    &END
    &TRAJECTORY
       &EACH
         MD 10
       &END
    &END
    &CELL
       &EACH
         MD 10
       &END
    &END
  &END
&END MOTION
