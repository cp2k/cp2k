&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GAPW
      MAP_CONSISTENT
      EPS_DEFAULT 1.0E-16
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC 
      MAX_SCF 15 
       
    &END SCF
    &XC
     &XC_FUNCTIONAL 
     &XWPBE
       SCALE_X -0.25
       SCALE_X0 1.0 
       OMEGA 0.11
     &END
      &PBE
        SCALE_X 0.0
        SCALE_C 1.0
      &END PBE
     &END XC_FUNCTIONAL
      &HF
        &SCREENING
          EPS_SCHWARZ 1.0E-10
        &END
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE SHORTRANGE
          OMEGA 0.11
        &END
        &MEMORY
          MAX_MEMORY  10
        &END
        FRACTION 0.25
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
    Ne   0.000000    0.000000    0.000000
    &END COORD
    &KIND Ne
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT NE-hybrid-HSE06-lda
#  TRACE
  PRINT_LEVEL MEDIUM 
  RUN_TYPE ENERGY 
&END GLOBAL
