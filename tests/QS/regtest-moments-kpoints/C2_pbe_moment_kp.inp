&GLOBAL
  PRINT_LEVEL low
  PROJECT C2_pbe_moment_kp
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    WFN_RESTART_FILE_NAME C2_pbe_scf_kp-RESTART.kp
    &KPOINTS
      FULL_GRID T
      SCHEME MONKHORST-PACK 4 4 1
    &END KPOINTS
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &PRINT
      &MOMENTS
        &KPOINTS
          FULL_GRID T
          KPOINT -0.375 -0.375 0.0 1.
          SCHEME GENERAL
          SYMMETRY F
        &END KPOINTS
      &END MOMENTS
    &END PRINT
    &QS
      METHOD gpw
    &END QS
    &SCF
      ADDED_MOS 2
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS restart
      &DIAGONALIZATION
        ALGORITHM STANDARD
        EPS_ADAPT 0.01
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.2
        BETA 1.5
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 2.4612 2.4612 16
      ALPHA_BETA_GAMMA 90. 90. 60.
      PERIODIC XYZ
    &END CELL
    &COORD
      SCALED
      C  1./3.  1./3.  0.
      C  2./3.  2./3.  0.
    &END COORD
    &KIND C
      BASIS_SET SZV-MOLOPT-GTH
      ELEMENT C
      POTENTIAL GTH-PBE
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES T
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
