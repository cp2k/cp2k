&GLOBAL
  PRINT_LEVEL low
  PROJECT C2_pbe_moment_kpset
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  POTENTIAL
    WFN_RESTART_FILE_NAME C2_pbe_scf_kp-RESTART.kp
    &POISSON
      PERIODIC XYZ
    &END POISSON
    &QS
      METHOD gpw
    &END QS
    &SCF
      SCF_GUESS restart
      EPS_SCF 1.0E-6
      MAX_SCF 100
      ADDED_MOS 2
      &DIAGONALIZATION
        ALGORITHM STANDARD
        EPS_ADAPT 0.01
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.2
        BETA 1.5
        NBROYDEN 8
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &KPOINTS
      SCHEME MONKHORST-PACK 4 4 1
      FULL_GRID T
    &END KPOINTS
    &PRINT
      &MOMENTS
       &KPOINT_SET
          SPECIAL_POINT K  1/3  2/3 0.0
          NPOINTS 1
        &END
      &END MOMENTS
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 2.4612 2.4612 16
      ALPHA_BETA_GAMMA 90. 90. 60.
      PERIODIC XYZ
    &END CELL
    &TOPOLOGY
      &CENTER_COORDINATES T
      &END
    &END TOPOLOGY
    &COORD
      SCALED
      C  1./3.  1./3.  0.
      C  2./3.  2./3.  0.
    &END
    &KIND C
      ELEMENT C
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
