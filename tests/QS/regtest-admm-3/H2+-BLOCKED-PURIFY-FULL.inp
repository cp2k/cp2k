&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2+-BLOCKED-PURIFY-FULL
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.000000001
  &END TIMINGS
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    CHARGE +1
    LSD
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD CAUCHY
      BLOCK_LIST 1
      BLOCK_LIST 2
      METHOD BLOCKED_PROJECTION_PURIFY_FULL
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 10
      SCF_GUESS ATOMIC
      &OT ON
      &END OT
    &END SCF
    &XC
      &HF
        FRACTION 0.25
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE COULOMB
        &END INTERACTION_POTENTIAL
        &MEMORY
          EPS_STORAGE_SCALING 0.1
          MAX_MEMORY 900
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &PBE
          SCALE_C 1.0
          SCALE_X 0.75
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC NONE
    &END CELL
    &COORD
      H       0.0   0.0   0.0
      H       5.0   0.0   0.0
    &END COORD
    &KIND H
      BASIS_SET SZV-MOLOPT-GTH
      BASIS_SET AUX_FIT SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-MOLOPT-GTH
      BASIS_SET AUX_FIT SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
