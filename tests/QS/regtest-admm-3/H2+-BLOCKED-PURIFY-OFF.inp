&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ../../../data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME ../../../data/GTH_POTENTIALS
    LSD
    CHARGE +1
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      METHOD BLOCKED_PROJECTION
      BLOCK_LIST 1
      BLOCK_LIST 2
    &END
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 10
      &OT ON
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PBE
          SCALE_X 0.75
          SCALE_C 1.0
        &END
      &END XC_FUNCTIONAL
      &HF
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END
        &MEMORY
          MAX_MEMORY 900
          EPS_STORAGE_SCALING 0.1
        &END
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE COULOMB
        &END
        FRACTION 0.25
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC NONE
    &END CELL
    &COORD
  H       0.0   0.0   0.0 
  H       5.0   0.0   0.0
    &END COORD
    &KIND H
      BASIS_SET SZV-MOLOPT-GTH
      AUX_FIT_BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-MOLOPT-GTH
      AUX_FIT_BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
     &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2+-BLOCKED-PURIFY-OFF
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
    THRESHOLD 0.000000001
  &END
&END GLOBAL
