&GLOBAL
  PROJECT dftd3_t5
  PRINT_LEVEL MEDIUM
  RUN_TYPE GEO_OPT
&END GLOBAL
&MOTION
  &GEO_OPT
    MAX_ITER 2
    MINIMIZER BFGS
  &END
&END
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME ../../../data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME ../../../data/POTENTIAL
    &MGRID
      NGRIDS 3
      CUTOFF 240
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 100
      EPS_SCF 1.0e-5
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE 
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD3
            PARAMETER_FILE_NAME ../../../data/dftd3.dat
            REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END
    &COORD
       He    1.255 0.0 0.0
       He   -1.255 0.0 0.0
    &END COORD
    &KIND He
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q2
    &END
  &END SUBSYS
&END
