&GLOBAL
  PROJECT H2O-uks-diag
  PRINT_LEVEL low
  RUN_TYPE energy
&END GLOBAL

&MOTION
  &GEO_OPT
    OPTIMIZER BFGS
    MAX_ITER  2
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    LSD
    MULTIPLICITY 1
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    PLUS_U_METHOD Lowdin
    &MGRID
      CUTOFF 200
    &END MGRID
    &PRINT
      &DFT_CONTROL_PARAMETERS
      &END DFT_CONTROL_PARAMETERS
      &PLUS_U
       &EACH
        QS_SCF 1
       &END EACH
      &END PLUS_U
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-8
      MAP_CONSISTENT
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 30
      &OT OFF
        MINIMIZER cg
      &END OT
      &OUTER_SCF OFF
        EPS_SCF 1.0E-5
        MAX_SCF 10
      &END OUTER_SCF
      &PRINT
        &RESTART
          &EACH 
             GEO_OPT 1 
             QS_SCF 30
          &END
          ADD_LAST NUMERIC
          FILENAME =RESTART-uks-diag-lowdin
          BACKUP_COPIES 0
        &END RESTART
      &END PRINT
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      O  0.000   0.000   -0.111
      H  0.000  -0.744    0.495
      H  0.000   0.744    0.495
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE-q6
      &DFT_PLUS_U
        L 1
        U_MINUS_J 0.08
        &ENFORCE_OCCUPATION
          ORBITALS 1 -1  0
          EPS_SCF 1.0E-2
          MAX_SCF 3
          SMEAR ON
        &END ENFORCE_OCCUPATION
      &END DFT_PLUS_U
    &END KIND
    &PRINT
      &KINDS
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
