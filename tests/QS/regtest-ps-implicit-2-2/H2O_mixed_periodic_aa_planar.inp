@SET PS   IMPLICIT
@SET BC   MIXED_PERIODIC
@SET Diag 0
@SET OT   1
@SET LS   off
@SET RST  off
&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H2O_mixed_periodic_aa_planar
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_FILTER 1.0E-7
      EPS_SCF 1.0E-7
      MAX_SCF 3
      MIXING_FRACTION 0.45
      MU -0.20
      PERFORM_MU_SCAN off
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES off
      S_PRECONDITIONER NONE
    &END LS_SCF
    &MGRID
      CUTOFF 150
      NGRIDS 4
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &POISSON
      POISSON_SOLVER ${PS}
      &IMPLICIT
        BOUNDARY_CONDITIONS ${BC}
        MAX_ITER 300
        OR_PARAMETER 1.0E-01
        TOL 1.0E-4
        &DIELECTRIC
          DERIVATIVE_METHOD cd5
          DIELECTRIC_CONSTANT 78.36
          RHO_MAX 1.0E-3
          RHO_MIN 1.0E-4
        &END DIELECTRIC
        &DIRICHLET_BC
          &AA_PLANAR
            INTERCEPT 7.5
            N_PRTN 3 1
            PARALLEL_PLANE XZ
            SMOOTHING_WIDTH 0.1
            THICKNESS 0.7
            V_D 0.01
            X_XTNT 0.5 7.5
            Z_XTNT 0.5 7.5
          &END AA_PLANAR
        &END DIRICHLET_BC
      &END IMPLICIT
    &END POISSON
    &PRINT
      &IMPLICIT_PSOLVER
        &DIELECTRIC_CUBE off
          STRIDE 1 1 1
        &END DIELECTRIC_CUBE
        &DIRICHLET_BC_CUBE off
          STRIDE 1 1 1
          TILE_CUBES .false.
        &END DIRICHLET_BC_CUBE
        &DIRICHLET_CSTR_CHARGE_CUBE off
          STRIDE 1 1 1
        &END DIRICHLET_CSTR_CHARGE_CUBE
      &END IMPLICIT_PSOLVER
      &V_HARTREE_CUBE off
        STRIDE 1 1 1
      &END V_HARTREE_CUBE
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-10
      LS_SCF ${LS}
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END DISTRIBUTION
    &END QS
    &SCF
      @IF ${Diag}
      EPS_SCF 1.0E-5
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.2
      &END MIXING
      @ENDIF
      @IF ${OT}
      EPS_SCF 1.0E-4
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-4
        MAX_SCF 3
      &END OUTER_SCF
      @ENDIF
      &PRINT
        &RESTART ${RST}
          BACKUP_COPIES 0
          &EACH
            QS_SCF 10
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COORD
      O         3.9999870401        3.5606769781        3.5606769833
      H         4.0000000491        3.4536015938        4.5327585878
      H         4.0000000214        4.5327585972        3.4536017371
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
