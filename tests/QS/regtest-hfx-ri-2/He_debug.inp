&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT He_debug
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_ATOM_FORCE 1 X
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    AUTO_BASIS RI_HFX SMALL
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    SORT_BASIS EXP
    &MGRID
      CUTOFF 300
      REL_CUTOFF 40
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 30
      SCF_GUESS RESTART
    &END SCF
    &XC
      &HF
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 1.5
          OMEGA 0.8
          POTENTIAL_TYPE MIX_CL_TRUNC
        &END INTERACTION_POTENTIAL
        &RI
          EPS_FILTER 1.0E-10
          RI_METRIC IDENTITY
        &END RI
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 3.0 3.0
    &END CELL
    &COORD
      He 0.0 0.0 0.0
      He 2.4 0.0 0.0
    &END COORD
    &KIND He
      BASIS_SET 3-21Gx
      POTENTIAL ALL
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
