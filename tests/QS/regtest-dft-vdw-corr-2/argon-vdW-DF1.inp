&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT argon
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0e-6
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 3
      SCF_GUESS ATOMIC
    &END SCF
    @XCTYPE vdW-DF1
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.3 5.3 5.3
      ALPHA_BETA_GAMMA 90 90 90
    &END CELL
    &COORD
      SCALED .TRUE.
      Ar 0.0 0.0 0.0
      Ar 0.5 0.5 0.0
      Ar 0.5 0.0 0.5
      Ar 0.0 0.5 0.5
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-MOLOPT-SR-GTH-q8
      POTENTIAL GTH-PADE-q8
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
