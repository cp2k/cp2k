# regetest - implicit Poisson solver: mixed BC, non-square (rectangular parallelepiped) cell
&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT Ar_mixed_aa_planar-ns_cell
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &LS_SCF
      EPS_FILTER 1.0E-7
      EPS_SCF 1.0E-7
      MAX_SCF 1
      MIXING_FRACTION 0.45
      MU -0.20
      PERFORM_MU_SCAN off
      PURIFICATION_METHOD TRS4
      REPORT_ALL_SPARSITIES off
      S_PRECONDITIONER NONE
    &END LS_SCF
    &MGRID
      CUTOFF 10
      NGRIDS 4
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &POISSON
      POISSON_SOLVER IMPLICIT
      &IMPLICIT
        BOUNDARY_CONDITIONS MIXED
        MAX_ITER 300
        OR_PARAMETER 1.0
        TOL 1.0E-4
        &DIELECTRIC
          DERIVATIVE_METHOD cd3
          DIELECTRIC_CONSTANT 1.50
          RHO_MAX 1.0E-3
          RHO_MIN 1.0E-4
        &END DIELECTRIC
        &DIRICHLET_BC
          &AA_PLANAR
            INTERCEPT 7.5
            N_PRTN 1 1
            PARALLEL_PLANE YZ
            SMOOTHING_WIDTH 0.1
            THICKNESS 0.9
            V_D 0.01
            Y_XTNT 0.5 7.5
            Z_XTNT 0.5 7.5
          &END AA_PLANAR
        &END DIRICHLET_BC
      &END IMPLICIT
    &END POISSON
    &PRINT
      &IMPLICIT_PSOLVER
        &DIELECTRIC_CUBE off
          STRIDE 1 1 1
        &END DIELECTRIC_CUBE
        &DIRICHLET_BC_CUBE off
          STRIDE 1 1 1
          TILE_CUBES .false.
        &END DIRICHLET_BC_CUBE
        &DIRICHLET_CSTR_CHARGE_CUBE off
          STRIDE 1 1 1
        &END DIRICHLET_CSTR_CHARGE_CUBE
      &END IMPLICIT_PSOLVER
      &V_HARTREE_CUBE off
        STRIDE 1 1 1
      &END V_HARTREE_CUBE
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-10
      LS_SCF off
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END DISTRIBUTION
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 1
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 1
      &END OUTER_SCF
      &PRINT
        &RESTART off
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 13.0 43.0 13.0
    &END CELL
    &COORD
      Ar        4.0000000000        4.0000000000        4.0000000000
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q8
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
