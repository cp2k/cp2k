@SET NREP 1
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME ../../../data/BASIS_SET
    POTENTIAL_FILE_NAME ../../../data/GTH_POTENTIALS
    &MGRID
      CUTOFF 400
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-7
      LS_SCF
    &END QS
    &LS_SCF
      MAX_SCF    100
      EPS_FILTER 1.0E-7
      EPS_SCF    1.0E-7
      MIXING_FRACTION 0.45
      S_PRECONDITIONER NONE
      REPORT_ALL_SPARSITIES OFF
      PERFORM_MU_SCAN OFF
      PURIFICATION_METHOD PEXSI
      &PEXSI
        NUM_POLE 60 
        MAX_PEXSI_ITER 3
        MU_MIN_0 -0.5
        MU_MAX_0 0.5
        MU_INERTIA_EXPANSION 0.1
        TEMPERATURE [K] 5000
        !GAP 0
        MU_PEXSI_SAFE_GUARD 0.01
        NUM_ELECTRON_PEXSI_TOLERANCE 0.01
        MU_INERTIA_TOLERANCE 0.01
        VERBOSITY BASIC
        MIN_RANKS_PER_POLE 4
!       ORDERING 0
        NP_SYMB_FACT 1
        IS_INERTIA_COUNT .FALSE.
      &END PEXSI
    &END
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 5.0 5.0 5.0
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    # 32 H2O (TIP5P,1bar,300K) a = 9.8528
    &COORD
     O       2.280398       9.146539       5.088696 H2O
     H       1.762019       9.820429       5.528454 H2O
     H       3.095987       9.107088       5.588186 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT PEXSI_TEST_H2O_MD
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
  &TIMINGS
     THRESHOLD 0.000001
  &END
  EXTENDED_FFT_LENGTHS
&END GLOBAL
&MOTION
  &MD
    STEPS 3
    TIMESTEP [fs] 0.125
    TEMPERATURE 300
    ENSEMBLE NVE
  &END
&END
