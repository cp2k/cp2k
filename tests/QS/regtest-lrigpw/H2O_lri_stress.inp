&GLOBAL
  PROJECT stress_H2O_lrigpw
  RUN_TYPE CELL_OPT 
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &CELL_OPT
    MAX_ITER  1
  &END
&END MOTION
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  METHOD Quickstep
  &DFT
  CHARGE 0
    BASIS_SET_FILE_NAME BASIS_LRI
    POTENTIAL_FILE_NAME ../../../data/POTENTIAL
    &MGRID
      CUTOFF      150
      REL_CUTOFF   30
    &END MGRID
    &POISSON
       PERIODIC XYZ
       POISSON_SOLVER PERIODIC
    &END
    &QS
     METHOD LRIGPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 30
      EPS_SCF 1.0E-6
      &DIAGONALIZATION
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC XYZ
    &END CELL
    &COORD
 O  0.000000    0.000000    0.117226
 H  0.000000    0.757136   -0.468906
 H  0.000000   -0.757136   -0.468906
    &END COORD
   &TOPOLOGY
    &CENTER_COORDINATES
    &END
   &END
    &KIND H
      BASIS_SET SZV-MOLOPT-GTH 
      POTENTIAL GTH-PBE-q1
      LRI_BASIS_SET LRI_SZV-GTH 
    &END KIND
    &KIND O
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
      LRI_BASIS_SET LRI_SZV-GTH 
    &END KIND
    &PRINT 
     &KINDS
      BASIS_SET
     &END
    &END PRINT
  &END SUBSYS
  &PRINT 
   &STRESS_TENSOR
   &END 
  &END PRINT
&END FORCE_EVAL
