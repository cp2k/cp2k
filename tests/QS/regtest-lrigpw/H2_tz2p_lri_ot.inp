  &DFT
  CHARGE 0
    BASIS_SET_FILE_NAME BASIS_LRI
    POTENTIAL_FILE_NAME ../../../data/POTENTIAL
    &MGRID
      NGRIDS 1
      CUTOFF 280
    &END MGRID
    &POISSON
       PERIODIC NONE
       POISSON_SOLVER MT
    &END
