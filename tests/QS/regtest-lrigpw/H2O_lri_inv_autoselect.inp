&GLOBAL
  PROJECT H2O_lrigpw_inv_autoselect
  RUN_TYPE ENERGY 
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
  CHARGE 0
    BASIS_SET_FILE_NAME BASIS_LRI
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF      150
      REL_CUTOFF   30
    &END MGRID
    &POISSON
       PERIODIC XYZ
       POISSON_SOLVER PERIODIC
    &END
    &QS
     METHOD LRIGPW
     &LRIGPW
       LRI_OVERLAP_MATRIX AUTOSELECT
       MAX_CONDITION_NUM 10.0
     &END
