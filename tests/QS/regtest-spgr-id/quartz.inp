&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT_NAME quartz
  RUN_TYPE CELL_OPT
&END GLOBAL

&MOTION
  &CELL_OPT
    EPS_SYMMETRY 1e-4
    KEEP_ANGLES T
    SHOW_SPACE_GROUP T
    MAX_ITER 4
    OPTIMIZER CG
    TYPE DIRECT_CELL_OPT
  &END CELL_OPT
  &GEO_OPT
    OPTIMIZER CG
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
