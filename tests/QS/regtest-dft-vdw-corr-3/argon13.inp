&GLOBAL
  PROJECT argon
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    LSD
    CHARGE 1
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 10
      EPS_SCF 1.0e-4
    &END SCF
    @XCTYPE vdW-DF1
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.3 5.3 5.3
      ALPHA_BETA_GAMMA 90 90 90
    &END CELL
    &COORD
      SCALED .TRUE.
      Ar 0.1 0.0 0.0
      Ar 0.5 0.5 0.0
      Ar 0.5 0.0 0.5
      Ar 0.0 0.5 0.5
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-MOLOPT-SR-GTH-q8
      POTENTIAL GTH-PADE-q8
    &END
  &END SUBSYS
&END FORCE_EVAL
