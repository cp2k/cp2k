&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    BASIS_SET_FILE_NAME BASIS_ADMM_ae
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC PBEX
      EXCH_SCALING_MODEL NONE
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 300
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      MAX_SCF 50
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE 1.0e-5
      NSTATES 2
      &REDUCED_EXCITATION_SPACE ON
        UPPER_ENERGY_CUTOFF -100
      &END REDUCED_EXCITATION_SPACE
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587 H2O
      H   0.000000   -0.757136    0.520545 H2O
      H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-ALL
      BASIS_SET AUX_FIT admm-1
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET ORB DZVP-ALL
      BASIS_SET AUX_FIT admm-1
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
