&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &MGRID
      CUTOFF 300
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      MAX_SCF 50
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE 1.0e-5
      KERNEL FULL
      NSTATES 2
      &REDUCED_EXCITATION_SPACE ON
        LOWER_ENERGY_CUTOFF -8
      &END REDUCED_EXCITATION_SPACE
      &XC
        &XC_FUNCTIONAL PBE
        &END XC_FUNCTIONAL
      &END XC
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587 H2O
      H   0.000000   -0.757136    0.520545 H2O
      H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-ALL
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET DZVP-ALL
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
