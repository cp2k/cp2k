&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_ATOM_FORCE 1 z
  DEBUG_FORCES T
  DEBUG_STRESS_TENSOR F
  DX 0.001
  STOP_ON_MISMATCH F
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &ENERGY_CORRECTION
      DEBUG_EXTERNAL_METHOD
      DEBUG_FORCES
      ENERGY_FUNCTIONAL EXTERNAL
      &RESPONSE_SOLVER
        METHOD MO_SOLVER
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END RESPONSE_SOLVER
    &END ENERGY_CORRECTION
    &MGRID
      CUTOFF 300
    &END MGRID
    &PRINT
      &DERIVATIVES
      &END DERIVATIVES
    &END PRINT
    &QS
      EPS_DEFAULT 1.E-10
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      H     0.000000     0.000000     0.360000
      H     0.000000     0.000000    -0.360000
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-GTH-BLYP
      POTENTIAL GTH-PADE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
