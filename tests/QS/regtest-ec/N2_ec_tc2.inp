&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PRINT
       &DERIVATIVES
       &END
    &END
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.E-12
    &END QS
    &ENERGY_CORRECTION
      ENERGY_FUNCTIONAL HARRIS
      HARRIS_BASIS HARRIS 
      ALGORITHM TC2
      EPS_DEFAULT 1.E-5
      EPS_FILTER 1.E-8
      &XC
        &XC_FUNCTIONAL
           &PBE
           &END
        &END
      &END XC
    &END ENERGY_CORRECTION
    &SCF
      EPS_SCF 1.0E-8
      SCF_GUESS ATOMIC
    &END
    &XC
      &XC_FUNCTIONAL
         &PADE
         &END
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
    N     0.000000     0.000000     0.650000
    N     0.000000     0.000000    -0.650000
    &END COORD
    &KIND N
      BASIS_SET ORB SZV-MOLOPT-GTH
      BASIS_SET HARRIS SZV-MOLOPT-GTH
      POTENTIAL GTH-PADE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT N2_ec_tc2
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
