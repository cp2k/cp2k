@IF $FUNC == PBE
    &XC
      &XC_FUNCTIONAL
        &PBE
          PARAMETRIZATION ORIG
          SCALE_X 1.0
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
@ENDIF

