&GLOBAL
  PRINT_LEVEL LOW
  PROJECT hex-ice
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &ALMO_SCF
      ALMO_ALGORITHM DIAG
      ALMO_SCF_GUESS ATOMIC
      DELOCALIZE_METHOD NONE
      EPS_FILTER 1.0E-8
      &ALMO_OPTIMIZER_DIIS
        EPS_ERROR 5.0E-4
        MAX_ITER 15
        N_DIIS 5
      &END ALMO_OPTIMIZER_DIIS
    &END ALMO_SCF
    &MGRID
      CUTOFF 200  ! 320
      NGRIDS 5
    &END MGRID
    &QS
      ALMO_SCF T
      EPS_DEFAULT 1.0E-8  ! 1.0E-12
    &END QS
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      @INCLUDE 'ice.cell'
      MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &COORD
      @INCLUDE 'ice.xyz'
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
