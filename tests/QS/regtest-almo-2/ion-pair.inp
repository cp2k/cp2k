&GLOBAL
  PROJECT ion-pair
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    BASIS_SET_FILE_NAME GTH_BASIS_SETS

    &QS
      ALMO_SCF T 
      EPS_DEFAULT 1.0E-8 ! 1.0E-12
    &END QS

    &ALMO_SCF
      EPS_FILTER                 1.0E-8
      ALMO_ALGORITHM             PCG
      ALMO_SCF_GUESS             MOLECULAR

      &ALMO_OPTIMIZER_PCG
        MAX_ITER                 50
        EPS_ERROR                5.0E-4
        CONJUGATOR               POLAK_RIBIERE
        PRECONDITIONER           DEFAULT
        LIN_SEARCH_EPS_ERROR     0.05
        LIN_SEARCH_STEP_SIZE_GUESS 0.1
        MAX_ITER_OUTER_LOOP      5
      &END ALMO_OPTIMIZER_PCG
      
      DELOCALIZE_METHOD          XALMO_SCF
      XALMO_R_CUTOFF_FACTOR      1.6
      
      &XALMO_OPTIMIZER_PCG
        MAX_ITER                 100
        EPS_ERROR                5.0E-4
        CONJUGATOR               POLAK_RIBIERE
        PRECONDITIONER           DEFAULT
        LIN_SEARCH_EPS_ERROR     0.05
        LIN_SEARCH_STEP_SIZE_GUESS 0.1
        MAX_ITER_OUTER_LOOP      0
      &END XALMO_OPTIMIZER_PCG
      
    &END ALMO_SCF
    
    &SCF
      EPS_SCF 5.0E-3
      SCF_GUESS ATOMIC
      MAX_SCF 20
      &OT
        PRECONDITIONER FULL_ALL
      &END
      &OUTER_SCF
        EPS_SCF 5.0E-3
        MAX_SCF 2
      &END
    &END SCF

    &MGRID
      CUTOFF 200 ! 320
      NGRIDS 4
    &END MGRID

    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC

    &PRINT
      &MULLIKEN
      &END MULLIKEN
    &END PRINT

  &END DFT
  &SUBSYS
    &CELL
      A [nm]  1.100 0.000 0.000
      B [nm]  0.000 0.800 0.000
      C [nm]  0.000 0.000 0.800
      MULTIPLE_UNIT_CELL 1 1 1 
    &END CELL

