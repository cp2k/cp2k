&GLOBAL
  PROJECT  scalable_GW
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-15
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 100
      ADDED_MOS -1
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &BANDSTRUCTURE
      &GW
        NUM_TIME_FREQ_POINTS 6
      &END
    &END
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom]  8.000   8.000  8.000
      PERIODIC XY
    &END CELL
    &KIND H
      BASIS_SET ORB    DZVP-GTH
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL        GTH-PBE-q1
    &END KIND
    &COORD
      H  -3.7  0.0  -0.4 
      H   3.7  0.4   0.0 
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
