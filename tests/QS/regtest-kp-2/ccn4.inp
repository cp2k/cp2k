@SET NREP 1
&FORCE_EVAL
 &DFT
  BASIS_SET_FILE_NAME BASIS_MOLOPT
  POTENTIAL_FILE_NAME POTENTIAL
  &MGRID
   CUTOFF 120
   REL_CUTOFF 30
  &END MGRID
  &QS
   METHOD GPW
   EPS_DEFAULT 1.0E-14
   EXTRAPOLATION USE_GUESS
  &END QS
  &SCF
   CHOLESKY OFF
   EPS_EIGVAL 1.0E-5
   EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
   MAX_SCF 1
   SCF_GUESS ATOMIC
   &MIXING
    ALPHA  0.70
    METHOD DIRECT_P_MIXING
   &END MIXING
   &PRINT
    &RESTART off
    &END RESTART
   &END PRINT
  &END SCF
  &XC
   &XC_FUNCTIONAL PADE
   &END XC_FUNCTIONAL
  &END XC
  &KPOINTS
   SCHEME MONKHORST-PACK 2 2 2
   SYMMETRY ON
   EPS_GEO 1.e-8
   FULL_GRID ON
   VERBOSE F
   PARALLEL_GROUP_SIZE  0
  &END KPOINTS
  &PRINT
   &OVERLAP_CONDITION
    1-NORM
    DIAGONALIZATION
    ARNOLDI
   &END OVERLAP_CONDITION
  &END PRINT
 &END DFT
 &SUBSYS
  &TOPOLOGY
   MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
  &END TOPOLOGY
  &CELL
   ABC 3.56683 3.56683 3.56683
   MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
  &END CELL
  &COORD
   SCALED
   C     0.000000    0.000000    0.000000
   C     0.500000    0.500000    0.000000
   C     0.500000    0.000000    0.500000
   C     0.000000    0.500000    0.500000
   C     0.250000    0.250000    0.250000
   C     0.250000    0.750000    0.750000
   C     0.750000    0.250000    0.750000
   C     0.750000    0.750000    0.250000
  &END COORD
  &KIND C
   BASIS_SET DZVP-MOLOPT-SR-GTH
   POTENTIAL GTH-PADE-q4
  &END KIND
 &END SUBSYS
&END FORCE_EVAL
&GLOBAL
 PROJECT C
 RUN_TYPE ENERGY
 PRINT_LEVEL LOW
&END GLOBAL
