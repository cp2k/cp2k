&FORCE_EVAL
    METHOD Quickstep
    &DFT
        BASIS_SET_FILE_NAME EMSL_BASIS_SETS
        POTENTIAL_FILE_NAME POTENTIAL
        AUTO_BASIS RI_HFX SMALL ! RI basis for HFX
        &MGRID
            CUTOFF 200
            REL_CUTOFF 50
        &END MGRID
        &QS
            METHOD GAPW
            EPS_DEFAULT 1.0E-12
        &END QS
        &SCF
            EPS_SCF 1.0E-6
            SCF_GUESS ATOMIC
            MAX_SCF 15
            &OT ON
                PRECONDITIONER FULL_ALL
            &END
        &END SCF
        &XC
            &XC_FUNCTIONAL
                &XWPBE
                    SCALE_X -0.25
                    SCALE_X0 1.0
                    OMEGA 0.11
                &END
                &PBE
                    SCALE_X 0.0
                    SCALE_C 1.0
                &END PBE
            &END XC_FUNCTIONAL
            &HF
                &RI
                &END
                &SCREENING
                    EPS_SCHWARZ 1.0E-5
                &END
                &INTERACTION_POTENTIAL
                    POTENTIAL_TYPE SHORTRANGE
                    OMEGA 0.11
                &END
                &MEMORY
                    MAX_MEMORY  10
                &END
                FRACTION 0.25
            &END
        &END XC
    &END DFT
    &SUBSYS
        &CELL
            ABC 6.0 6.0 12.0
        &END CELL
        &COORD
            Ne   0.000000    0.000000    0.000000
            Ne   0.000000    0.000000    2.000000
            Ne   0.000000    0.000000    4.000000
            Ne   0.000000    0.000000    6.000000
            Ne   0.000000    0.000000    8.000000
            Ne   0.000000    0.000000    10.000000
        &END COORD
        &KIND Ne
            BASIS_SET 6-31Gxx
            POTENTIAL ALL
        &END KIND
    &END SUBSYS
&END FORCE_EVAL
&GLOBAL
    PROJECT NE-hybrid-HSE06-lda
    PRINT_LEVEL MEDIUM
    RUN_TYPE ENERGY
&END GLOBAL
