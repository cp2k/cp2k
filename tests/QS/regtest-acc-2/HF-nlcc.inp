&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT HF-nlcc
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_ATOM_FORCE 1 z
  DE 0.0002
  DEBUG_FORCES .TRUE.
  DEBUG_STRESS_TENSOR .FALSE.
  STOP_ON_MISMATCH T
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME NLCC_POTENTIALS
    &MGRID
      CUTOFF 240
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      ALPHA_WEIGHTS 6.0
      GAPW_ACCURATE_XCINT T
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 8
      SCF_GUESS atomic
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-7
        MAX_SCF 8
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      H      0.000000  0.000000  0.470000
      F      0.000000  0.000000 -0.510000
    &END COORD
    &KIND H
      BASIS_SET ORB SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-NLCC-PBE-q1
    &END KIND
    &KIND F
      BASIS_SET ORB SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-NLCC-PBE-q7
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
