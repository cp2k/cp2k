&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT HF
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_ATOM_FORCE 1 z
  DE 0.001
  DEBUG_FORCES .TRUE.
  DEBUG_STRESS_TENSOR .FALSE.
  STOP_ON_MISMATCH T
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &ENERGY_CORRECTION
      ENERGY_FUNCTIONAL DCDFT
      HARRIS_BASIS ORBITAL
      &RESPONSE_SOLVER
        EPS 1.E-8
        METHOD MO_SOLVER
        PRECONDITIONER FULL_ALL
      &END RESPONSE_SOLVER
      &XC
        &XC_FUNCTIONAL TPSS
        &END XC_FUNCTIONAL
      &END XC
    &END ENERGY_CORRECTION
    &MGRID
      CUTOFF 240
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      GAPW_1C_BASIS EXT_SMALL
      GAPW_ACCURATE_XCINT T
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      SCF_GUESS atomic
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      H      0.000000  0.000000  0.470000
      F      0.000000  0.000000 -0.510000
    &END COORD
    &KIND H
      BASIS_SET SVP-MOLOPT-GGA-ae
      POTENTIAL ALL
    &END KIND
    &KIND F
      BASIS_SET SVP-MOLOPT-GGA-ae
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
