@SET RESTART_WFN              TRUE
@SET WFN_FILE_1               HeH-cdft-state-1-1_0.wfn
@SET WFN_FILE_2               HeH-cdft-state-2-1_0.wfn
@SET PROJECT_NAME             HeH-mixed-cdft-8
@SET NAME                     ${PROJECT_NAME}
@SET WRITE_WFN                0
@SET CHARGE                   1
@SET WRITE_CUBE               FALSE
@SET CENTER_SYS               ON
@SET XYZFILE                  HeH.xyz

@SET HIRSHFELD_ACTIVE         TRUE
@SET HIRSHFELD_FRAGMENT       FALSE
@SET PRINT_WEIGHT_FUNCTION    FALSE
@SET MAX_SCF                  5
! He+ H
@SET HIRSHFELD_TARGET_1       0.0
@SET HIRSHFELD_STR_1          5.043518608137
! He H+
@SET HIRSHFELD_TARGET_2       2.0
@SET HIRSHFELD_STR_2          -0.956481391863

@SET HIRSHFELD_SHAPEFN        GAUSSIAN
@SET GAUSSIAN_SHAPE           COVALENT

@SET COMPUTE_METRIC           FALSE
@SET WFN_OVERLAP_METHOD       FALSE
@SET NGROUPS                  2

&GLOBAL
  PROJECT ${PROJECT_NAME}
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
  PREFERRED_DIAG_LIBRARY SL
&END GLOBAL

&MULTIPLE_FORCE_EVALS
  FORCE_EVAL_ORDER 2 3
  MULTIPLE_SUBSYS F
&END
&FORCE_EVAL
  METHOD MIXED
  &MIXED
    MIXING_TYPE MIXED_CDFT
    NGROUPS  ${NGROUPS}
    &MIXED_CDFT
      LAMBDA 1.0
      COUPLING 1
      NONORTHOGONAL_COUPLING TRUE
      LOWDIN FALSE
      CI FALSE
    &END MIXED_CDFT
    &PRINT
      &PROGRAM_RUN_INFO
      &END
    &END PRINT
  &END MIXED
  @include subsys.inc
&END FORCE_EVAL

&FORCE_EVAL
  METHOD QS
  @SET HIRSHFELD_STR    ${HIRSHFELD_STR_1}
  @SET HIRSHFELD_TARGET ${HIRSHFELD_TARGET_1}
  @SET PROJECT_NAME     ${NAME}-state-1
  @SET WFN_FILE         ${WFN_FILE_1}
  @include dft-common-params.inc
&END FORCE_EVAL

&FORCE_EVAL
  METHOD QS
  @SET HIRSHFELD_STR    ${HIRSHFELD_STR_2}
  @SET HIRSHFELD_TARGET ${HIRSHFELD_TARGET_2}
  @SET PROJECT_NAME     ${NAME}-state-2
  @SET WFN_FILE         ${WFN_FILE_2}
  @include dft-common-params.inc
&END FORCE_EVAL
