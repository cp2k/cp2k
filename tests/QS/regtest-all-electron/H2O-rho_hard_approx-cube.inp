&GLOBAL
  PRINT_LEVEL low
  PROJECT H2O-rho_hard_approx-cube
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 120
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &PRINT
      &E_DENSITY_CUBE
        DENSITY_INCLUDE TOTAL_HARD_APPROX
      &END E_DENSITY_CUBE
    &END PRINT
    &QS
      ALPHA0_H 10.0
      EPSFIT 1.0E-4
      EPSISO 1.0E-12
      EPSRHO0 1.0E-6
      EPS_DEFAULT 1.0E-8
      EXTRAPOLATION USE_PREV_P
      LMAXN0 2
      LMAXN1 6
      METHOD GAPW
      QUADRATURE GC_LOG
    &END QS
    &SCF
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC NONE
    &END CELL
    &COORD
      O  0.000   0.000   -0.111
      H  0.000  -0.744    0.495
      H  0.000   0.744    0.495
    &END COORD
    &KIND H
      BASIS_SET 6-31G*
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 6-31G*
      POTENTIAL ALL
    &END KIND
    &PRINT
      &ATOMIC_COORDINATES
      &END ATOMIC_COORDINATES
      &STRUCTURE_DATA
        ANGLE 2 1 3
        DISTANCE 1 2
        DISTANCE 1 3
      &END STRUCTURE_DATA
    &END PRINT
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
