&GLOBAL
  PROJECT no-gapw-nics
  PRINT_LEVEL LOW
  RUN_TYPE LINEAR_RESPONSE
&END GLOBAL
&FORCE_EVAL
  &DFT
    LSD T
    MULTIPLICITY 2
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
      &RS_GRID
        DISTRIBUTION_TYPE DISTRIBUTED
      &END RS_GRID
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      MAX_SCF 3
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &LINRES
       &LOCALIZE
          MAX_ITER 5
       &END
       PRECONDITIONER FULL_ALL
       MAX_ITER 5
       &CURRENT
          GAUGE ATOM
          ORBITAL_CENTER COMMON
       &END CURRENT
       &NMR
          INTERPOLATE_SHIFT T
          NICS T
          NICS_FILE_NAME ./nics_no
       &END
    &END
  &END
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &KIND N
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
    &COORD
 O   0.000000    0.000000    0.542338
 N   0.000000    0.000000   -0.619815
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
