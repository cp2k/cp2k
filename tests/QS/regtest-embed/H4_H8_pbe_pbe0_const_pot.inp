!
!  Tests level shifting, printing embedding potential cubes
!  and adding a constant part to the embedding potential
!
&GLOBAL
  PROJECT  h4_h8_pbe_pbe0_4_const
  PRINT_LEVEL HIGH
  RUN_TYPE ENERGY
&END GLOBAL
&MULTIPLE_FORCE_EVALS
   FORCE_EVAL_ORDER 2 3 4 5
   MULTIPLE_SUBSYS T
&END
&FORCE_EVAL
    METHOD EMBED
    &EMBED
       NGROUPS 1
       &MAPPING
          &FORCE_EVAL_EMBED
             &FRAGMENT 1
                1 4
             &END
             &FRAGMENT 2
                5 8
             &END
             &FRAGMENT 3
                1 8
             &END
          &END
          &FORCE_EVAL 1
             &FRAGMENT 1
                1 4
                MAP 1
              &END
          &END
          &FORCE_EVAL 2
             &FRAGMENT 1
                1 4
                MAP 2
             &END
          &END
          &FORCE_EVAL 3
             &FRAGMENT 1
                1 8
                MAP 3
              &END
          &END
          &FORCE_EVAL 4
             &FRAGMENT 1
                1 4
                MAP 2
             &END
          &END
       &END
    &END EMBED
  &SUBSYS
    &CELL
      ABC [angstrom]  10.000   10.000  10.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET  cc-TZ
      BASIS_SET RI_AUX  RI_TZ
      !POTENTIAL  GTH-PBE-q1
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET  cc-TZ
      BASIS_SET RI_AUX  RI_TZ
      !POTENTIAL  GTH-PBE-q6
      POTENTIAL  GTH-HF-q6
    &END KIND
    &COORD
H    6.7935     6.0     4.0
H    7.3225     6.0     4.0
H    5.2065     6.0     4.0
H    4.6775     6.0     4.0
H    6.2645     6.0     4.0
H    5.7355     6.0     4.0
H    6.0     5.7355     7.42105263158
H    6.0     6.2645     7.42105263158
    &END
  &END SUBSYS
&END FORCE_EVAL

! Subsys 1

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PRINT
       &E_DENSITY_CUBE MEDIUM
       &END
    &END
    BASIS_SET_FILE_NAME  BASIS_RI_cc-TZ
    !POTENTIAL_FILE_NAME  GTH_POTENTIALS
    POTENTIAL_FILE_NAME   HF_POTENTIALS
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      &OT
       PRECONDITIONER FULL_ALL
      &END
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 100
      &PRINT
        &RESTART OFF
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
