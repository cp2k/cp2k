! Higher level calculation on subsys 2

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  BASIS_RI_cc-TZ
    POTENTIAL_FILE_NAME   HF_POTENTIALS
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &POISSON
    &END POISSON
    &QS
      HIGH_LEVEL_EMBED_SUBSYS
      METHOD GPW
      EPS_DEFAULT 1.0E-5
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      &OT
       PRECONDITIONER FULL_ALL
      &END
      SCF_GUESS ATOMIC
      EPS_SCF 0.001
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &WF_CORRELATION
        &INTEGRALS
          &WFC_GPW
            CUTOFF  100
            REL_CUTOFF 20
          &END WFC_GPW
        &END INTEGRALS
        &RI_RPA
          RPA_NUM_QUAD_POINTS 8
          MINIMAX
          &HF
            FRACTION 1.0000000
            &SCREENING
              EPS_SCHWARZ 1.0E-8
              SCREEN_ON_INITIAL_P FALSE
            &END SCREENING
          &END HF
        &END RI_RPA
        MEMORY  200.
        NUMBER_PROC  1
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  5.000   5.000  5.000
    &END CELL
    &KIND H
      BASIS_SET  cc-TZ
      BASIS_SET RI_AUX  RI_TZ
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET  cc-TZ
      BASIS_SET RI_AUX  RI_TZ
      POTENTIAL  GTH-HF-q6
    &END KIND
    &COORD
  H      1.75  2.75  0.0
  H      1.75  3.50 0.0
    &END
  &END SUBSYS
&END FORCE_EVAL

