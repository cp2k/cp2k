&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &QS
      LS_SCF
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER  MT
    &END POISSON
    &LS_SCF
      MAX_SCF     25
      EPS_SCF     1.0E-8
      S_PRECONDITIONER  NONE
      REPORT_ALL_SPARSITIES OFF
      PURIFICATION_METHOD TRS4
      EXTRAPOLATION_ORDER  1
      &PAO
        MAX_PAO 1
        EPS_PAO 1.0E-5
        PARAMETERIZATION FOCK
        REGULARIZATION 1.0 ! very strong  
        NUM_GRADIENT_ORDER 4 
        CHECK_GRADIENT_TOL 1.0E-6
        &LINE_SEARCH
          METHOD 3PNT
        &END LINE_SEARCH
      &END PAO
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      H       0.72  0.0   0.0
      H       0.0   0.0   0.0
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH-q1
      POTENTIAL GTH-PBE-q1
      PAO_BASIS_SIZE 1
    &END KIND
    &TOPOLOGY
       &CENTER_COORDINATES
       &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2_pao_fock_checkgrad
  RUN_TYPE ENERGY
&END GLOBAL
