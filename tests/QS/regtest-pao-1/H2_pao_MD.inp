&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &QS
      LS_SCF
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER  MT
    &END POISSON
    &LS_SCF
      MAX_SCF     25
      EPS_SCF     1.0E-8
      S_PRECONDITIONER  NONE
      REPORT_ALL_SPARSITIES OFF
      PURIFICATION_METHOD TRS4
      EXTRAPOLATION_ORDER  4
      &PAO
        MAX_PAO 50
        EPS_PAO 1.0E-5
        PARAMETERIZATION ROTINV
        REGULARIZATION 0.0
        PENALTY_STRENGTH 0.0
        LINPOT_REGULARIZATION_STRENGTH 0.0
        RESTART_FILE H2_pao_rotinv-1_0.pao
        &LINE_SEARCH
          METHOD ADAPT
        &END LINE_SEARCH
      &END PAO
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      H       0.72  0.0   0.0
      H       0.0   0.0   0.0
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH-q1
      POTENTIAL GTH-PBE-q1
      PAO_BASIS_SIZE 1
      &PAO_POTENTIAL
        MAXL 0
      &END PAO_POTENTIAL
    &END KIND
    &TOPOLOGY
       &CENTER_COORDINATES
       &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 5
    TIMESTEP 0.1
    TEMPERATURE 300
  &END MD
&END MOTION
&GLOBAL
  PROJECT H2_pao_MD
  RUN_TYPE MD
&END GLOBAL
