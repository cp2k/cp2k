&DEBUG
 DEBUG_FORCES  TRUE
&END DEBUG
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ../../../data/GTH_BASIS_SETS
    BASIS_SET_FILE_NAME ../../../data/BASIS_ADMM
    POTENTIAL_FILE_NAME ../../../data/GTH_POTENTIALS
    LSD
    MULTIPLICITY 3
    &MGRID 
      CUTOFF      50
      REL_CUTOFF  25
    &END MGRID
    &QS
      METHOD        GPW
      EPS_DEFAULT   1.0E-20
      EPS_PGF_ORB   1.0E-12
      EPS_FILTER_MATRIX 0.0e0
    &END QS
    &POISSON
      PERIODIC        NONE
      POISSON_SOLVER  MT
      ! POISSON_SOLVER  WAVELET
    &END POISSON
    &AUXILIARY_DENSITY_MATRIX_METHOD
      METHOD BASIS_PROJECTION
      ADMM_PURIFICATION_METHOD NONE
      EXCH_SCALING_MODEL MERLOT  
    &END
    &SCF
      SCF_GUESS  RESTART
      EPS_SCF    1.0E-6
      MAX_SCF    10
      &OT
        MINIMIZER       DIIS
        PRECONDITIONER  FULL_ALL
      &END
      &OUTER_SCF
        EPS_SCF  1.0E-6
        MAX_SCF  10
      &END
    &END SCF
    &XC
      ! PURE HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
      &HF
        FRACTION   1.0000000
        &SCREENING
          EPS_SCHWARZ          1.0E-12
          SCREEN_ON_INITIAL_P  FALSE 
        &END SCREENING
      &END HF
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]   5.000  5.000  5.000
      PERIODIC  NONE
    &END CELL
    &COORD
  O       0.000000    0    0
  O       0 0 1.2
    &END COORD
    &KIND O
      BASIS_SET          DZVP-GTH 
      AUX_FIT_BASIS_SET  FIT3
      POTENTIAL          GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT     O2-admmp-forces
  PRINT_LEVEL MEDIUM
  RUN_TYPE    DEBUG 
  ! TRACE
&END GLOBAL

