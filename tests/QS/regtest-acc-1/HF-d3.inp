&GLOBAL
  PRINT_LEVEL LOW
  PROJECT HF
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_ATOM_FORCE 2 z
  DE 0.0002
  DEBUG_FORCES .TRUE.
  DEBUG_STRESS_TENSOR .FALSE.
  STOP_ON_MISMATCH T
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &MGRID
      CUTOFF 240
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      ALPHA_WEIGHTS 6.0
      EPSFIT 1.E-4
      EPSISO 1.E-12
      EPSRHO0 1.E-6
      EPS_DEFAULT 1.E-12
      FORCE_PAW
      GAPW_1C_BASIS EXT_SMALL
      GAPW_ACCURATE_XCINT T
      LMAXN0 4
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS atomic
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      H      0.000000  0.000000  0.470000
      F      0.000000  0.000000 -0.510000
    &END COORD
    &KIND H
      BASIS_SET SVP-MOLOPT-GGA-ae
      POTENTIAL ALL
    &END KIND
    &KIND F
      BASIS_SET SVP-MOLOPT-GGA-ae
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
