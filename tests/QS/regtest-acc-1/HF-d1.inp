&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT HF
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_DIPOLE_DIRS Z
  DE 0.001
  DEBUG_DIPOLE .TRUE.
  DEBUG_FORCES .FALSE.
  DEBUG_POLARIZABILITY .FALSE.
  DEBUG_STRESS_TENSOR .FALSE.
  STOP_ON_MISMATCH T
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &MGRID
      CUTOFF  240
      REL_CUTOFF 40
    &END MGRID

    &EFIELD
    &END EFIELD

    &PRINT
      &MOMENTS ON
        PERIODIC .FALSE.
        REFERENCE COM
      &END MOMENTS
    &END PRINT

    &QS
        METHOD GAPW
        FORCE_PAW
        EPS_DEFAULT 1.E-12
        EPSFIT      1.E-4
        EPSISO      1.E-12
        EPSRHO0     1.E-6
        LMAXN0      4
        GAPW_1C_BASIS EXT_SMALL
        GAPW_ACCURATE_XCINT  T
        ALPHA_WEIGHTS  6.0
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      SCF_GUESS atomic 
      &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE 
      &END XC_FUNCTIONAL
    &END XC
    &POISSON
        PERIODIC NONE
        POISSON_SOLVER MT
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      H      0.000000  0.000000  0.470000
      F      0.000000  0.000000 -0.510000
    &END COORD
    &KIND H
      BASIS_SET TZVPP-MOLOPT-GGA-ae
      POTENTIAL ALL
    &END KIND
    &KIND F
      BASIS_SET TZVPP-MOLOPT-GGA-ae
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
