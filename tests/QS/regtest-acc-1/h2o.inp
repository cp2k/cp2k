&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT h2o
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME "BASIS_SET"
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 240
      REL_CUTOFF 40
    &END MGRID
    &PRINT
      &DERIVATIVES
      &END DERIVATIVES
    &END PRINT
    &QS
      ALPHA_WEIGHTS 6.5
      EPS_DEFAULT 1.0E-10
      FORCE_PAW
      GAPW_1C_BASIS EXT_SMALL
      GAPW_ACCURATE_XCINT T
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
