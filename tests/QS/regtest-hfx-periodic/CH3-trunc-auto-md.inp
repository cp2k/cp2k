&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT CH3-trunc-auto-md
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    STEPS 3
    TEMPERATURE 0.1
    TIMESTEP 0.5
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 50
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 1.0
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA t_c_g.dat
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 10
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-7
          EPS_SCHWARZ_FORCES 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
      C   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
      H   0.757136    0.520545    0.000000
    &END COORD
    &KIND H
      BASIS_SET 3-21Gx
      POTENTIAL ALL
    &END KIND
    &KIND C
      BASIS_SET 3-21Gx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
