
&FORCE_EVAL
  &DFT
    CHARGE 0
    POTENTIAL_FILE_NAME FAKE_POTENTIAL
    &MGRID
      CUTOFF 300
    &END MGRID
    &POISSON
      PERIODIC XY
      POISSON_SOLVER MT
      &MT
        ALPHA 7.0
        REL_CUTOFF 1.2
      &END MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 9.0
      UNIT ANGSTROM
    &END CELL
    &CONSTRAINT
      SHAKE 1.0E-10
    &END CONSTRAINT
    &COORD
    H   0.0000  0.0000  0.0000
    H   0.0000  0.0000  4.0000
    He  2.0000  2.0000  2.0000 
    &END COORD
    &KIND H
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-ANTYMATTER-q1
    &END KIND
    &KIND He
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTSG
  PROGRAM Quickstep
  PROJECT H2O
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 0
    TIMESTEP 0.1
    TEMPERATURE 300.0
    &NOSE
      LENGTH 3
      YOSHIDA 3
      TIMECON 100.0
      MTS 2
    &END NOSE
  &END MD
&END MOTION
