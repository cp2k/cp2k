&GLOBAL

 PROJECT      xas_hch_igloiii
 IOLEVEL      MEDIUM
 RUN_TYPE     ENERGY
&END 

&FORCE_EVAL
  METHOD Quickstep

  &DFT
    LSD
    BASIS_SET_FILE_NAME ALL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &XC
      &XC_FUNCTIONAL PADE
      &END
    &END
    &QS
      METHOD       GAPW
      EPS_GVG      1.0E-8
      EPS_PGF_ORB  1.0E-8
      QUADRATURE   GC_LOG
      EPSFIT       1.E-4
      EPSISO       1.0E-12
      EPSRHO0      1.E-8
      LMAXN0       2
      LMAXN1       6
      ALPHA0_H     10
     &END
    &MGRID
      CUTOFF       50
      NGRIDS        1
    &END
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 5.E-7
      EPS_DIIS 0.4
      MAX_SCF 3
       
      ADDED_MOS  1 1
      &OT OFF
        PRECONDITIONER FULL_ALL
      &END OT
      &PRINT
        &TOTAL_DENSITIES MEDIUM
        &END
        &RESTART
           FILENAME =CO-RESTART
        &END
      &END
    &END SCF
   &POISSON
     POISSON_SOLVER MT
     &MT
      ALPHA 7.0
      #REL_CUTOFF 1.2
     &END
     PERIODIC NONE
    &END POISSON

  &END SECTION DFT
  &SUBSYS
    &CELL
       ABC    3.0    3.0     3.0 
       PERIODIC NONE
    &END CELL

    &KIND O
      BASIS_SET  6-31G*
      POTENTIAL ALL
      LEBEDEV_GRID 50
      RADIAL_GRID 100
    &END

    &KIND  C
      BASIS_SET  6-31G*
      POTENTIAL  ALL
      LEBEDEV_GRID 50
      RADIAL_GRID 100
    &END

    &COORD
      C         0.000000    0.000000   -0.004108
      O        0.000000    0.000000    1.132332
    &END
  &END SUBSYS
&END FORCE_EVAL
