&GLOBAL
  PRINT_LEVEL LOW
  PROJECT Gdeb
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  DE 0.002
  DEBUG_DIPOLE .FALSE.
  DEBUG_FORCES .FALSE.
  DEBUG_POLARIZABILITY .TRUE.
  DEBUG_STRESS_TENSOR .FALSE.
  EPS_NO_ERROR_CHECK 5.e-5
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &QS
      EPS_DEFAULT 1.e-14
      METHOD GPW
    &END QS
    &MGRID
      CUTOFF 400
      REL_CUTOFF 60
    &END MGRID
    &EFIELD
    &END EFIELD
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-7
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    @XCTYPE vdW-DF1
    &PRINT
      &MOMENTS ON
        PERIODIC .FALSE.
        REFERENCE COM
      &END MOMENTS
    &END PRINT
  &END DFT
  &PROPERTIES
    &LINRES
      EPS 1.e-10
      PRECONDITIONER FULL_ALL
      &POLAR
        DO_RAMAN T
        PERIODIC_DIPOLE_OPERATOR F
      &END POLAR
    &END LINRES
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC [angstrom] 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O         0.094933   -0.000368    0.895642
      C        -0.031077   -0.000121   -0.307326
      H        -0.090437    0.947608   -0.895642
      H        -0.094933   -0.947608   -0.895562
    &END COORD
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
