&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O_wavelet_XZ
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 500
    &END MGRID
    &POISSON
      PERIODIC XZ
      POISSON WAVELET
      &WAVELET
        SCF_TYPE 14
      &END WAVELET
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &GRID_INFORMATION on
    &END GRID_INFORMATION
  &END PRINT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
      PERIODIC XZ
    &END CELL
    &COORD
      O   0.000000    4.000000   -0.065587
      H   0.000000    3.242800    0.520545
      H   0.000000    3.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
