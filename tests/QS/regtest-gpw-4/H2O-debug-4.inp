&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ../../../data/BASIS_SET
    POTENTIAL_FILE_NAME ../../../data/POTENTIAL
    &MGRID
      CUTOFF 50
    &END MGRID
    &QS
      EXTRAPOLATION USE_PREV_WF
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
    &LOCALIZE T
      &PRINT
        &WANNIER_CENTERS
          IONS+CENTERS
          FORMAT XMOL
        &END
        &MOLECULAR_DIPOLES
          COMMON_ITERATION_LEVELS 2
          PERIODIC
        &END
        &TOTAL_DIPOLE
          COMMON_ITERATION_LEVELS 2
          PERIODIC T
          REFERENCE COAC
        &END
      &END
    &END
    &PRINT
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587
    H   0.000000   -0.757136    0.520545
    H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2O-debug-4
  RUN_TYPE md
  PRINT_LEVEL DEBUG
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 1
    TIMESTEP 0.1
    TEMPERATURE 300.0
  &END MD
&END MOTION
