&GLOBAL
  PROJECT LiH-stress-pbe-rks
  RUN_TYPE GEO_OPT
  PRINT_LEVEL low
  WALLTIME 600
&END GLOBAL
&MOTION
  &GEO_OPT
    OPTIMIZER BFGS
    MAX_ITER  2
    MAX_DR    0.001
    RMS_DR    0.0005
    MAX_FORCE 0.00015
    RMS_FORCE 0.0001
  &END GEO_OPT
  &PRINT
    &STRESS
    &END STRESS
  &END PRINT
&END MOTION
&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR analytical
  &DFT
    BASIS_SET_FILE_NAME ../../../data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME ../../../data/NLCC_POTENTIALS
    &MGRID
      CUTOFF 100
    &END MGRID
    &PRINT
      &DFT_CONTROL_PARAMETERS
      &END DFT_CONTROL_PARAMETERS
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-8
      EXTRAPOLATION use_prev_p
      MAP_CONSISTENT
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 30
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &STRESS_TENSOR
      NDIGITS 6
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC 4.8800 4.8800 4.8800
    &END CELL
    &COORD
 SCALED
C  0.000 0.000 0.000
C  0.500 0.500 0.000
C  0.500 0.000 0.500
C  0.000 0.500 0.500
Si  0.250 0.250 0.250
Si  0.250 0.750 0.750
Si  0.750 0.250 0.750
Si  0.750 0.750 0.250
    &END COORD
    &KIND C
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-NLCC-PBE-q4
    &END KIND
    &KIND Si
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-NLCC-PBE-q4
    &END KIND
    &PRINT
      &CELL
      &END CELL
      &KINDS
        BASIS_SET
        POTENTIAL
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
