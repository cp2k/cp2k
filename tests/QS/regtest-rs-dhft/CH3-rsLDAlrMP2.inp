@SET MY_OMEGA 0.5
&GLOBAL
  PROJECT  CH3-rsLDAlrMP2.inp
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    POTENTIAL_FILE_NAME  POTENTIAL
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 100
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &LDA_X
        &END LDA_X
        &LDA_X_ERF
          _OMEGA ${MY_OMEGA}
          SCALE -1.0
        &END
        &LDA_C_PMGB06
          SCALE -1.0
          _OMEGA ${MY_OMEGA}
        &END
        &LDA_C_PW
        &END
      &END XC_FUNCTIONAL
      &HF
        FRACTION 1.0000000
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE LONGRANGE
          OMEGA ${MY_OMEGA}
        &END INTERACTION_POTENTIAL
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &WF_CORRELATION
        &RI_MP2
        &END RI_MP2
        &INTEGRALS
          &WFC_GPW
            CUTOFF  50
            REL_CUTOFF 10
          &END WFC_GPW
          &INTERACTION_POTENTIAL
            POTENTIAL_TYPE LONGRANGE
            OMEGA ${MY_OMEGA}
          &END INTERACTION_POTENTIAL
        &END INTEGRALS
        MEMORY  200.
        NUMBER_PROC  1
        &RI
          DO_SVD
          EPS_SVD 0.0
        &END RI
      &END
    &END XC
    UKS
    MULTIPLICITY  2
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  6.000   6.000   6.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  CH3.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
