&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT ch3
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    LSD
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 300
      REL_CUTOFF 30
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 20
      &END OUTER_SCF
    &END SCF
    &XC
      &HF
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 0.5
          POTENTIAL_TYPE TRUNCATED
          T_C_G_DATA t_c_g.dat
        &END INTERACTION_POTENTIAL
        &MEMORY
          MAX_MEMORY 10
        &END MEMORY
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          EPS_SCHWARZ_FORCES 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &STRESS_TENSOR
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
    &END CELL
    &COORD
      C  0.1  0.2  0.3
      H  0.5  0.6  0.7
      H  -0.5  -0.6  -0.7
      H  0.5 -0.5 0.5
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND C
      BASIS_SET SZV-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
