
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    CHARGE +1
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      NGRIDS 1
      CUTOFF 150
    &END MGRID
    &QS
      ALPHA0_HARD 10
      ALPHA0_SOFT 10
      EPS_GVG 1.0E-6
      EPS_PGF_ORB 1.0E-6
      EPSFIT 1.E-4
      EPSISO 1.0E-12
      EPSRHO0 1.E-8
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 3
      LMAXN0 2
      LMAXN1 6
      METHOD GAPW
      QUADRATURE GC_LOG
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 10
      SCF_GUESS RESTART
      &OT ON
        PRECONDITIONER FULL_ALL
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      UNIT ANGSTROM
    &END CELL
    &COORD
    He 0.0 0.0 0.0
    He 2.0 0.0 0.0
    &END COORD
    &KIND He
      BASIS_SET DZVP-ALL-PADE
      LEBEDEV_GRID 50
      POTENTIAL ALL
      RADIAL_GRID 150
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTSG
  PROGRAM Quickstep
  PROJECT gapw_all_pade
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 3
    TIMESTEP 0.2
    TEMPERATURE 300.0
    RESTART INIT
  &END MD
&END MOTION
