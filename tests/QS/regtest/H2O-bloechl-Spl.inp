
&FORCE_EVAL
  &DFT
    &POISSON_DFT
      PERIODIC NONE
      POISSON_SOLVER MULTIPOLE
      &MULTIPOLE
        EWALD_PRECISION 0.0001
        RCUT 3.0
      &END MULTIPOLE
    &END POISSON_DFT
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      UNIT ANGSTROM
    &END CELL
    &CONSTRAINT
      SHAKE 1.0E-10
    &END CONSTRAINT
    &COORD
    O   4.000000    4.000000    4.000000
    H   4.000000    3.250000    4.520000
    H   4.000000    4.750000    4.520000
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTSG
  PROGRAM Quickstep
  PROJECT H2O
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 1
    TIMESTEP 0.1
    TEMPERATURE 300.0
    RESTART INIT
    &NOSE
      LENGTH 3
      YOSHIDA 3
      TIMECON 100.0
      MTS 2
    &END NOSE
  &END MD
&END MOTION
