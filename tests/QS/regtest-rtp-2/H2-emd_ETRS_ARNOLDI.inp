&GLOBAL
  !  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
  PROJECT H2-emd_ETRS_ARNOLDI
  RUN_TYPE EHRENFEST_DYN
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 5
    TEMPERATURE 100.0
    TIMESTEP [au_t] 0.5
  &END MD
  &PRINT
    &TRAJECTORY
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &EFIELD
      ENVELOP CONSTANT
      INTENSITY 5.0E10
      POLARISATION 0.859311 0.511454 0
      WAVELENGTH 900
      &CONSTANT_ENV
        END_STEP 3
        START_STEP 1
      &END CONSTANT_ENV
    &END EFIELD
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &REAL_TIME_PROPAGATION
      EPS_ITER 1.0E-3
      EXP_ACCURACY 1.0E-9
      INITIAL_WFN SCF_WFN
      MAT_EXP ARNOLDI
      MAX_ITER 10
      PROPAGATOR ETRS
    &END REAL_TIME_PROPAGATION
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 20
      SCF_GUESS ATOMIC
      &OT ON
        ROTATION
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587 H2O
      H   0.000000   -0.757136    0.520545 H2O
      H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
