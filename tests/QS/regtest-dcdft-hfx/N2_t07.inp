&GLOBAL
  PRINT_LEVEL LOW
  PROJECT N2
  RUN_TYPE GEO_OPT
  &REFERENCES OFF
  &END REFERENCES
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 1
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    BASIS_SET_FILE_NAME BASIS_ADMM
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC PBEX
      EXCH_SCALING_MODEL NONE
      METHOD BASIS_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &ENERGY_CORRECTION
      ADMM
      ENERGY_FUNCTIONAL DCDFT
      HARRIS_BASIS HARRIS
      &RESPONSE_SOLVER
        EPS 1.0E-6
        METHOD MO_SOLVER
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END RESPONSE_SOLVER
      &XC
        &HF
          ! 25 % HFX exchange
          FRACTION 0.25
          &SCREENING
            EPS_SCHWARZ 1.0E-4
          &END SCREENING
        &END HF
        ! use a PBE0 functional
        ! By using an interaction potential and different EPS_SCHWARZ
        ! we do not reuse the HFX section of the ground-state calculation
        &XC_FUNCTIONAL
          &PBE
            ! 100% GGA correlation
            SCALE_C 1.0
            ! 75% GGA exchange
            SCALE_X 0.75
          &END PBE
        &END XC_FUNCTIONAL
      &END XC
    &END ENERGY_CORRECTION
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.E-12
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        &SCREENING
          EPS_SCHWARZ 1.0E-4
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      N     0.000000     0.000000     0.650000
      N     0.000000     0.000000    -0.650000
    &END COORD
    &KIND N
      BASIS_SET ORB DZVP-GTH
      BASIS_SET HARRIS DZVP-GTH
      BASIS_SET AUX_FIT cFIT3
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
