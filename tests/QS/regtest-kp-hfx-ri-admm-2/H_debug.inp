&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT H_debug
  RUN_TYPE DEBUG
&END GLOBAL

&DEBUG
  CHECK_ATOM_FORCE 1 X
&END DEBUG

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    AUTO_BASIS RI_HFX SMALL
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    SORT_BASIS EXP
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC PBEX
      EXCH_SCALING_MODEL MERLOT
      METHOD CHARGE_CONSTRAINED_PROJECTION
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &KPOINTS
      SCHEME MONKHORST-PACK 6 3 3
    &END KPOINTS
    &MGRID
      CUTOFF 300
      REL_CUTOFF 40
    &END MGRID
    &QS
      METHOD GAPW
      PW_GRID_BLOCKED FALSE
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 30
      SCF_GUESS RESTART  !ATOMIC
    &END SCF
    &XC
      &HF
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 1.0
          OMEGA 0.9
          POTENTIAL_TYPE MIX_CL_TRUNC
          SCALE_LONGRANGE 0.1
        &END INTERACTION_POTENTIAL
        &RI
          EPS_FILTER 1.0E-10
          MEMORY_CUT 2
          NGROUPS 2
          RI_METRIC IDENTITY
          STACK_SIZE 32
        &END RI
      &END HF
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
      H 0.0 0.0 0.0
      H 0.8 0.0 0.0
    &END COORD
    &KIND H
      BASIS_SET 6-31Gx
      BASIS_SET AUX_FIT 3-21Gx
      POTENTIAL ALL
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
