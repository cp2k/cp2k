&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT diamond_gpw_stress
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_RI_cc-TZ
    LSD
    POTENTIAL_FILE_NAME POTENTIAL
    SORT_BASIS EXP
    &KPOINTS
      SCHEME MONKHORST-PACK 2 2 2
    &END KPOINTS
    &MGRID
      CUTOFF 150
      REL_CUTOFF 30
    &END MGRID
    &QS
      METHOD GPW
      PW_GRID_BLOCKED FALSE
    &END QS
    &SCF
      IGNORE_CONVERGENCE_FAILURE
      MAX_SCF 2
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 0.25
        &INTERACTION_POTENTIAL
          CUTOFF_RADIUS 0.5
          !this is too small for a real calculation. The only requirement is that it is
          !smaller than N_kp * L/2 in each direction. Potential range has a drastic effect
          !on efficiency, as it greatly increses the number of periodic images to consider
          POTENTIAL_TYPE TRUNCATED
        &END INTERACTION_POTENTIAL
        &RI
          EPS_FILTER 1.0E-10
          MEMORY_CUT 2
          NGROUPS 2
          RI_METRIC IDENTITY
        &END RI
        &SCREENING
          EPS_SCHWARZ 1.0E-10
          EPS_SCHWARZ_FORCES 1.0E-6
        &END SCREENING
      &END HF
      &XC_FUNCTIONAL
        &PBE
          SCALE_X 0.75
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PRINT
    &STRESS_TENSOR
      COMPONENTS
    &END STRESS_TENSOR
  &END PRINT
  &SUBSYS
    &CELL
      !this is not a realistic cell, but denser systems would be too expensive for a test
      ABC 8.0 8.0 8.0
      ALPHA_BETA_GAMMA 60.0 60.0 60.0
    &END CELL
    &COORD
      SCALED
      C   0.00000000  0.00000000  0.00000000
      C   0.25000000  0.25000000  0.25000000
    &END COORD
    &KIND C
      BASIS_SET cc-DZ
      BASIS_SET RI_HFX RI_DZ
      POTENTIAL GTH-HF
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
