&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT CH3_md_admm
  RUN_TYPE MD
  &TIMINGS
    THRESHOLD 0.01
  &END TIMINGS
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 1
  &END MD
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME HFX_BASIS
    BASIS_SET_FILE_NAME BASIS_ADMM
    MULTIPLICITY 2
    POTENTIAL_FILE_NAME POTENTIAL
    SORT_BASIS EXP
    UKS
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
    &END AUXILIARY_DENSITY_MATRIX_METHOD
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-11
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &HF
        FRACTION 0.25
        &SCREENING
          EPS_SCHWARZ 1.0E-7
          EPS_SCHWARZ_FORCES 1.0E-6
        &END SCREENING
      &END HF
      &WF_CORRELATION
        &INTEGRALS
          ERI_METHOD OS
        &END INTEGRALS
        &LOW_SCALING
          MEMORY_CUT 2
        &END LOW_SCALING
        &RI
          &RI_METRIC
            POTENTIAL_TYPE IDENTITY
          &END RI_METRIC
        &END RI
        &RI_RPA
          ADMM
          QUADRATURE_POINTS 2
          &HF
            FRACTION 1.0000000
            &SCREENING
              EPS_SCHWARZ 1.0E-7
              EPS_SCHWARZ_FORCES 1.0E-6
            &END SCREENING
          &END HF
        &END RI_RPA
      &END WF_CORRELATION
      # RPA@PBE0 with ADMM
      &XC_FUNCTIONAL
        &PBE
          SCALE_C 1.00
          SCALE_X 0.75
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 5.000 5.000 5.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET DZVP-GTH
      BASIS_SET AUX_FIT cFIT3
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH
      BASIS_SET AUX_FIT cFIT3
      BASIS_SET RI_AUX RI_DZVP-GTH
      POTENTIAL GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_FORMAT xyz
      COORD_FILE_NAME CH3.xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
