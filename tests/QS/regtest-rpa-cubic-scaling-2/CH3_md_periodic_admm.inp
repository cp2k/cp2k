&GLOBAL
  PROJECT  CH3_md_periodic_admm
  PRINT_LEVEL MEDIUM
  RUN_TYPE MD
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS  1
  &END
&END MOTION
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    BASIS_SET_FILE_NAME  BASIS_ADMM
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  POTENTIAL
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC NONE
    &END
    &MGRID
      CUTOFF  200
      REL_CUTOFF  30
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 100
    &END SCF
    &XC
      # RPA@PBE0 with ADMM
      &XC_FUNCTIONAL PBE
         &PBE
            SCALE_X 0.75
         &END 
      &END XC_FUNCTIONAL 
      &HF
         FRACTION 0.25
         &SCREENING
           EPS_SCHWARZ 1.0E-8
         &END SCREENING
         &INTERACTION_POTENTIAL
            POTENTIAL_TYPE TRUNCATED
            CUTOFF_RADIUS 2.0
         &END INTERACTION_POTENTIAL
      &END HF
      &WF_CORRELATION
        &RI_RPA
          QUADRATURE_POINTS  3
          ADMM
          &HF
            FRACTION 1.00
            &SCREENING
              EPS_SCHWARZ 1.0E-8
            &END SCREENING
            &INTERACTION_POTENTIAL
               POTENTIAL_TYPE TRUNCATED
               CUTOFF_RADIUS 2.0
            &END INTERACTION_POTENTIAL
            &RI
               EPS_FILTER 1.0E-12
            &END
          &END HF
        &END
        &LOW_SCALING
          MEMORY_CUT 2
        &END
        &INTEGRALS
          ERI_METHOD MME
        &END INTEGRALS
        &RI
          &RI_METRIC
            POTENTIAL_TYPE IDENTITY
          &END
        &END RI
      &END
    &END XC
    UKS
    MULTIPLICITY  2
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  6.000   6.000   6.000
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL  GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  CH3.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
