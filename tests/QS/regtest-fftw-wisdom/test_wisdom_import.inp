&GLOBAL
  FFTW_PLAN_TYPE PATIENT
  FFTW_WISDOM_FILE_NAME ./wisdom
  PREFERRED_FFT_LIBRARY FFTW3
  PRINT_LEVEL MEDIUM
  PROJECT test_wisdom_export
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 100
      REL_CUTOFF 30
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-7
    &END QS
    &SCF
      EPS_SCF 1.0E-6
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 3.0 3.0
      MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &COORD
      H 0.0 0.0 0.0 H
      H 0.8 0.0 0.0 H
    &END COORD
    &KIND H
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
