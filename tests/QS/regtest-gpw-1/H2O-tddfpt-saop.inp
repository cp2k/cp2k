&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O-tddfpt-saop
  RUN_TYPE SPECTRA
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    EXCITATIONS tddfpt
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      SCF_GUESS atomic
    &END SCF
    &TDDFPT
      INVERT_S Y
      KERNEL Y
      MAX_KV 60
      METHOD DAVIDSON
      NEV 2
      OE_CORR SAOP
      PRECOND N
      REORTHO 2
      RESTARTS 2
      RES_ETYPE TRIPLETS
      &XC
        DENSITY_CUTOFF 1.0E-10
        GRADIENT_CUTOFF 1.0E-10
        &XC_FUNCTIONAL
          &PADE
          &END PADE
        &END XC_FUNCTIONAL
        &XC_GRID
          XC_DERIV NN10_SMOOTH
        &END XC_GRID
      &END XC
    &END TDDFPT
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV NN10_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.5 4.5 4.5
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587
      H   0.000000   -0.757136    0.520545
      H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET SZV-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET SZV-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
