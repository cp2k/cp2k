&GLOBAL
  PROJECT Ne_DEBUG
  ! regtest for checking debug is working
  PRINT_LEVEL DEBUG
  RUN_TYPE  MD
&END GLOBAL
&MOTION
 &MD
    STEPS 1
    TIMESTEP 0.5
    ENSEMBLE NVE
 &END
&END

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME ../BASIS_SET
    POTENTIAL_FILE_NAME ../POTENTIAL
    &MGRID
      CUTOFF 140
    &END MGRID
    &QS
    &END QS
    &SCF
      MAX_SCF 30
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
    &END CELL
    &COORD
    Ne   0.000000  0.000000  0.000000
    &END COORD
    &KIND Ne
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q8
    &END KIND
  &END SUBSYS
  &PRINT  
    &GRID_INFORMATION ON
    &END
  &END
&END FORCE_EVAL
