&GLOBAL
  PROJECT H2
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 300
      REL_CUTOFF 30
    &END MGRID
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON
    &QS
      METHOD RIGPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 20
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6 6 6
      PERIODIC NONE
    &END CELL
    &COORD
      H  0 0.0 0.0
      H  0 0.0 0.74144
    &END COORD
    &KIND H
      BASIS_SET ORB DZVP-MOLOPT-GGA-GTH-q1
      BASIS_SET RI_AUX TZV2P-MOLOPT-GGA-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
