&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT He

  RUN_TYPE BASIS_OPTIMIZATION

  ELECTRON_CONFIGURATION 1s2
  MAX_ANGULAR_MOMENTUM 0

  &METHOD
     METHOD_TYPE  HARTREE-FOCK
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-12
  &END

  &AE_BASIS
     BASIS_TYPE SLATER
     NUM_SLATER 3 0 0 0
     S_EXPONENTS  1.5 1.5 1.5
     S_QUANTUM_NUMBERS 1 2 3
  &END AE_BASIS

  &POWELL
     ACCURACY   1.e-14
     STEP_SIZE  0.1
  &END
&END ATOM
