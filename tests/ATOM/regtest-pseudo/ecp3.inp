&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT Rn

  RUN_TYPE ENERGY

  ELECTRON_CONFIGURATION CORE 6s2 6p6
  CORE [Xe] 4f14 5d10

  MAX_ANGULAR_MOMENTUM 4

  &METHOD
     METHOD_TYPE  KOHN-SHAM
     &XC
       &XC_FUNCTIONAL PBE
       &END XC_FUNCTIONAL
     &END XC
  &END METHOD

  &OPTIMIZATION
    MAX_ITER 100
    EPS_SCF 1.e-6
  &END
  &PRINT
     &POTENTIAL
     &END POTENTIAL
     &SEPARABLE_GAUSSIAN_PSEUDO
     &END
  &END PRINT

  &POTENTIAL
    PSEUDO_TYPE ECP
    POTENTIAL_NAME Stuttgart_RLC_ECP
    POTENTIAL_FILE_NAME ECP_POTENTIALS
  &END POTENTIAL

&END ATOM
